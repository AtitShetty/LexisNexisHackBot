{
    "task": {
        "@otherprops": "searchfilter;favoritetips;",
        "@id": "savefilter_hdi",
        "title": "How do I save a filter as a favorite?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2009-12-15"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": {
                    "uicontrol": [
                        {
                            "#tail": "filters or",
                            "#text": "Narrow By"
                        },
                        {
                            "#tail": "to narrow your search, they are added to the",
                            "#text": "Explore Content"
                        },
                        {
                            "#tail": "pod, along with favorite sources and topics. To save a filter to the Favorites pod on the",
                            "#text": "Recent & and Favorites"
                        }
                    ],
                    "ph": {
                        "@keyref": "prodnamefirst",
                        "#tail": "home page, follow the steps below."
                    },
                    "#text": "When you make selections from the"
                }
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Search: Everything"
                            },
                            "#text": "On the search form, select"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "from the pane on the left.",
                                "#text": "Recent & Favorites"
                            },
                            "#text": "Select"
                        }
                    },
                    {
                        "cmd": {
                            "image": [
                                {
                                    "@alt": "Save as favorite filter",
                                    "@href": "#FavoriteEmpty.png",
                                    "@placement": "inline",
                                    "#tail": ") next to the filter you want to save as a favorite.  The star turns yellow ("
                                },
                                {
                                    "@alt": "Favorite filter",
                                    "@href": "#FavoriteFull.png",
                                    "@placement": "inline",
                                    "#tail": ") to indicate that the filter has been saved as a favorite."
                                }
                            ],
                            "#text": "Click the star ("
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Favorite",
                                "@href": "#CloseRemove.png",
                                "@placement": "inline",
                                "#tail": "next to it."
                            },
                            "#text": "To remove the filter from your favorites, select the"
                        }
                    }
                ]
            },
            "result": {
                "p": [
                    "Favorite filters are saved in the list until you remove them.",
                    {
                        "uicontrol": [
                            {
                                "#tail": "from the",
                                "#text": "Settings"
                            },
                            {
                                "#tail": "drop-down list at the top of the page, then select",
                                "#text": "More"
                            },
                            {
                                "ph": {
                                    "@keyref": "prodnamefirst",
                                    "#tail": "Research"
                                },
                                "#tail": "from the options on the left. Select"
                            },
                            {
                                "#tail": ".",
                                "#text": "Retain search filters for future sessions"
                            }
                        ],
                        "#text": "To save a filter to be used in future sessions, select"
                    }
                ]
            }
        }
    }
}