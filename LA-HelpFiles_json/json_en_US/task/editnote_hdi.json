        "taskbody": {
            "context": {
                "p": "You can edit notes you have added to any item, such as a document or a section of text, that you have stored in a  folder, or you can add new notes. To edit a note, follow the steps below."
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "pod of the",
                                    "#text": "Folders"
                                },
                                {
                                    "#tail": "link from the",
                                    "#text": "Folders"
                                },
                                {
                                    "#tail": "drop-down list at the top of any page. The Folders page appears.",
                                    "#text": "More"
                                }
                            ],
                            "ph": {
                                "@keyref": "prodnamefirst",
                                "#tail": "home page, or select the"
                            },
                            "#text": "Select a folder from the"
                        }
                    },
                    {
                        "cmd": "Click the link for the item whose note you want to edit. The item is opened."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "link below the document title. The Document Notes box is displayed at the bottom of the document.",
                                "#text": "View all notes"
                            },
                            "#text": "Click the"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button. The Edit Notes dialog box appears.",
                                "#text": "Edit"
                            },
                            "#text": "Click the"
                        }
                    },
                    {
                        "@id": "editoradd",
                        "cmd": "Edit the text in the box."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "if you want the notes to be visible to users you have shared it with. (Clear this option if the notes should be visible only to you.)",
                                "#text": "Allow recipients to view your notes"
                            },
                            "#text": "Optionally, if this is a shared item, select"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Save"
                            },
                            "#text": "Click"
                        }
                    }
                ]
            }
        }
    }
