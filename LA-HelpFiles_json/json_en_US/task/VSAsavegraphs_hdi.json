            "steps": {
                "step": [
                    {
                        "cmd": {
                            "ph": {
                                "@keyref": "vsaname",
                                "#tail": "search and view your results."
                            },
                            "#text": "Complete your"
                        }
                    },
                    {
                        "cmd": {
                            "image": [
                                {
                                    "@alt": "Delivery Settings",
                                    "@href": "deliverysettings.png",
                                    "#tail": "next to the Download icon ("
                                },
                                {
                                    "@alt": "Download",
                                    "@href": "download.png",
                                    "#tail": "). The Download delivery dialog box appears."
                                }
                            ],
                            "#text": "At the reports page, click the"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "tab, select",
                                    "#text": "Basic Settings"
                                },
                                {
                                    "#tail": "or",
                                    "#text": "Charts and graphs with results list (up to 250)"
                                },
                                {
                                    "#tail": "from the",
                                    "#text": "Charts and graphs only"
