{
    "task": {
        "@otherprops": "searchfilter;faveselectopictips;favoritetips",
        "@audience": "res",
        "@id": "topicfavorite_hdi",
        "title": "How do I save a topic as a favorite?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2012"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2012-07-10"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "If there's a topic you often search in, you can save it as a favorite for future searches."
            }
        },
        "task": [
            {
                "@id": "searchfortopic",
                "title": "To search for a topic:",
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "ph": {
                                        "@keyref": "prodnamefirst",
                                        "#tail": "home page, select the"
                                    },
                                    "uicontrol": {
                                        "#tail": "drop-down menu at the top of the page.",
                                        "#text": "Browse"
                                    },
                                    "#text": "On the"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Topics"
                                    },
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Search within topic"
                                    },
                                    "#text": "Enter search terms in the text box under"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Search"
                                    },
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": "Select the topic you want to use."
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Actions"
                                    },
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": "Add topic as a search filter",
                                    "#text": "From the menu that appears, select"
                                },
                                "info": {
                                    "note": "If you have selected any other filters for this search, they will be replaced by your selection."
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "pod.",
                                        "#text": "Favorites"
                                    },
                                    "#text": "On the home page, select the"
                                }
                            },
                            {
                                "cmd": "Select the name of the topic you just selected."
                            }
                        ]
                    }
                }
            },
            {
                "@id": "browsefortopic",
                "title": "To browse for a topic:",
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "drop-down menu at the top of the page.",
                                        "#text": "Browse"
                                    },
                                    "#text": "On the home page, select the"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Topics"
                                    },
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": ",",
                                            "#text": "Administrative Law"
                                        },
                                        {
                                            "#tail": ", etc. from the list.",
                                            "#text": "Family Law"
                                        }
                                    ],
                                    "#text": "Select a practice area, such as"
                                }
                            },
                            {
                                "cmd": "Continue to expand the selections until you see the topic you want."
                            },
                            {
                                "cmd": "Select the topic you want to use.",
                                "stepresult": {
                                    "uicontrol": {
                                        "#tail": "box appears.",
                                        "#text": "Add Topic as a Filter"
                                    },
                                    "#text": "The"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Continue"
                                    },
                                    "#text": "Select"
                                },
                                "info": {
                                    "note": "If you have selected any other filters for this search, they will be replaced by your selection."
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "pod.",
                                        "#text": "Favorites"
                                    },
                                    "#text": "Select the"
                                }
                            },
                            {
                                "cmd": "Select the name of the topic you just selected."
                            }
                        ]
                    }
                }
            }
        ]
    }
}