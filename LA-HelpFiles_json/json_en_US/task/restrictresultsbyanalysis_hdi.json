{
    "task": {
        "@otherprops": "resultsfilter;shep",
        "@audience": "res",
        "@id": "restrictresultsbyanalysis_hdi",
        "title": "How do I restrict my Shepard's\u00ae results to a specific analysis?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "If your search retrieved Shepard's\u00ae results containing analyses, you can restrict your results to only those documents that contain specific ones. To do this, follow the steps below."
            },
            "steps": {
                "step": [
                    {
                        "cmd": "Submit your search request and review your results."
                    },
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "section of the",
                                    "#text": "Analysis"
                                },
                                {
                                    "#tail": "pane, select the analysis you want to restrict your search to.  To select more than one analysis, select",
                                    "#text": "Narrow By"
                                },
                                {
                                    "#tail": ".  To display additional analyses, select",
                                    "#text": "Select Multiple"
                                },
                                {
                                    "#tail": ".",
                                    "#text": "More"
                                }
                            ],
                            "#text": "In the"
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Remove level",
                                "@href": "Closeremove.png",
                                "@placement": "inline",
                                "#tail": ") next to the citations you selected, which is displayed at the top of the"
                            },
                            "uicontrol": [
                                {
                                    "#tail": "pane.  To remove all filters at once, select",
                                    "#text": "Narrow By"
                                },
                                {
                                    "#tail": ".",
                                    "#text": "Clear"
                                }
                            ],
                            "#text": "To return to your original results set, select the Remove icon ("
                        }
                    }
                ]
            },
            "result": {
                "p": "Your results are updated to show only documents pertaining to the analyses you selected."
            }
        }
    }
}