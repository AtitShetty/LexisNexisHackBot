                        "info": {
                            "note": {
                                "@type": "note",
                                "uicontrol": [
                                    {
                                        "#tail": "drop-down list, select",
                                        "#text": "Search"
                                    },
                                    {
                                        "#tail": "or",
                                        "#text": "Rerun as natural language"
                                    },
                                    {
                                        "#tail": "(the phrase that is displayed depends on which way your original search was run). For more information, see",
                                        "#text": "Rerun as terms & connectors"
                                    }
                                ],
                                "xref": {
                                    "@scope": "peer",
                                    "@href": "naturalvsterms_cpt.xml"
                                },
                                "#text": "To rerun a search as a different type, while viewing the"
                            }
