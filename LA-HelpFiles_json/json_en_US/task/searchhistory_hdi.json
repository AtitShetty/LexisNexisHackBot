{
    "task": {
        "@otherprops": "history;historytips",
        "@id": "searchhistory_hdi",
        "title": "How do I find an item in my history?",
        "prolog": {
            "author": [
                "Barb Bruns",
                "Garth Lewis"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                },
                "revised": {
                    "@modified": "2014-10-28"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": [
                    "You can search your history to find a previous search or search terms, a document from your results, a page you printed, or any other activity from up to the last 90 days.",
                    "To do this:"
                ],
                "note": {
                    "@type": "note",
                    "#text": "For Public Records, you can only find items in history for up to 10 days."
                }
            },
            "steps": {
                "step": [
                    {
                        "cmd": "Take one of the following actions:",
                        "info": {
                            "ul": {
                                "li": [
                                    {
                                        "ph": {
                                            "@keyref": "prodnamefirst",
                                            "#tail": "home page, select the"
                                        },
                                        "uicontrol": [
                                            {
                                                "#tail": "pod, then select",
                                                "#text": "History"
                                            },
                                            {
                                                "#tail": "at the bottom of the pod.",
                                                "#text": "Research Map"
                                            }
                                        ],
                                        "#text": "On the"
                                    },
                                    {
                                        "uicontrol": [
                                            {
                                                "#tail": "at the top of any page, select",
                                                "#text": "History"
                                            },
                                            {
                                                "#tail": ".",
                                                "#text": "Research Map"
                                            }
                                        ],
                                        "#text": "From"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "box that appears at the top left of the page, type the words you want to search for.",
                                "#text": "Search Within History"
                            },
                            "#text": "In the"
                        },
                        "info": {
                            "note": {
                                "@type": "fastpath",
                                "#text": "You can enter the name (or part of the name) of a document, a document citation, a term (or terms) from a previous search, a matter ID, and so on."
                            }
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Search",
                                "@href": "Search.png",
                                "@placement": "inline",
                                "#tail": ")."
                            },
                            "#text": "Select the search icon ("
                        },
                        "stepresult": "The system displays your results."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "above your results.",
                                "#text": "Clear search"
                            },
                            "#text": "To return to the history page you were viewing before searching your history, select"
                        }
                    }
                ]
            }
        }
    }
}