                "step": [
                    {
                        "cmd": {
                            "xref": {
                                "@scope": "peer",
                                "@href": "lsaviewdocsinlsa_hdi.xml",
                                "#tail": ".",
                                "#text": "View your organization's document in Lexis Search Advantage"
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "pane on the left side of the page.",
                                "#text": "About This Document"
                            },
                            "#text": "Locate the"
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Expand",
                                "@href": "lpashowmore.png",
                                "#tail": ") to view the list of options. (Once a category is expanded, select"
                            },
                            "uicontrol": {
                                "#tail": "to fully expand a partially hidden list.)",
                                "#text": "Show All"
                            },
                            "#text": "Locate the type of information you want to view and, if necessary, select the Expand icon ("
                        }
                    },
                    {
                        "cmd": "Complete any of the following optional steps:",
                        "choices": {
                            "choice": [
                                {
                                    "uicontrol": {
                                        "#tail": "pane to view the first instance of that text within the document.",
                                        "#text": "About This Document"
                                    },
                                    "#text": "Click a specific link in the"
                                },
                                {
                                    "uicontrol": [
                                        {
                                            "#tail": "(",
                                            "#text": "Next"
                                        },
                                        {
                                            "#tail": "(",
                                            "#text": "Previous"
                                        }
                                    ],
                                    "image": [
                                        {
                                            "@alt": "Next",
                                            "@href": "triangleright.png",
                                            "#tail": ") or"
                                        },
                                        {
                                            "@alt": "Previous",
                                            "@href": "triangleleft.png",
                                            "#tail": ") icon to move between specific citations, names, or other types of metadata."
                                        }
                                    ],
                                    "#text": "Click the"
