{
    "task": {
        "@otherprops": "icwprofessor",
        "@audience": "icw",
        "@id": "icwresetexercise_hdi",
        "title": {
            "ph": {
                "@keyref": "icwnamefirst",
                "#tail": "exercises for a selected student?"
            },
            "#text": "How do I grade"
        },
        "prolog": {
            "author": "Garth Lewis",
            "copyright": {
                "copyryear": {
                    "@year": "2014"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2014-04-22"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "Follow these steps to assign grades to a student for selected exercises and manuals."
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "ph": {
                                "@keyref": "icwnamefirst",
                                "#tail": "Home page, in the Status Reports pod, select"
                            },
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Individual Student Report"
                            },
                            "#text": "From your"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "drop-down list, select the name of the student you want to grade.",
                                "#text": "Select a student"
                            },
                            "#text": "From the"
                        }
                    },
                    {
                        "cmd": "From the pod's other drop-down list, select the exercise manual for which you want to assign grades."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button.",
                                "#text": "Get Status Report for Student"
                            },
                            "#text": "Select the"
                        },
                        "stepresult": {
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "takes you to the Student Status page for the selected manual. This page gives you both a graphical view and a list view of the student's progress through the manual."
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button for the exercise you want to grade.",
                                "#text": "Actions"
                            },
                            "#text": "In the far right column of the exercise list, click the"
                        },
                        "stepresult": "A drop-down menu of options appears."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Edit or assign grade"
                            },
                            "#text": "Select"
                        },
                        "stepresult": "The Edit or Assign Grade form appears."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "field, type the letter grade you want to give the student for the exercise.",
                                "#text": "Enter grade"
                            },
                            "#text": "In the"
                        },
                        "info": {
                            "note": {
                                "@type": "tip",
                                "#text": "You can include a plus (+) or minus (-)."
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button.",
                                "#text": "Save"
                            },
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "associates the grade you entered for the exercise with the selected student. The Edit or Assign Grade form closes, returning you to the exercise list."
                            },
                            "#text": "Select the"
                        }
                    },
                    {
                        "cmd": "Repeat Steps 5 through 9 for any other exercises you want to grade for this student."
                    }
                ]
            }
        }
    }
}