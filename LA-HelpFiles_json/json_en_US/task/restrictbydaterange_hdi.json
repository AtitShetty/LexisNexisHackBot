{
    "task": {
        "@otherprops": "resultsfilter",
        "@audience": "res",
        "@id": "restrictbydaterange_hdi",
        "title": "How do I restrict my results to a specific date range?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "You can restrict your results to a particular date range from your results."
            },
            "steps": {
                "step": [
                    {
                        "cmd": "Submit your search request and review your results."
                    },
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "section of the",
                                    "#text": "Timeline"
                                },
                                {
                                    "#tail": "pane:",
                                    "#text": "Narrow By"
                                }
                            ],
                            "#text": "In the"
                        },
                        "info": {
                            "ul": {
                                "li": [
                                    {
                                        "uicontrol": {
                                            "#tail": ".",
                                            "#text": "OK"
                                        },
                                        "#text": "Use your mouse to move either of the sliders to the left or right until the date range you want is displayed and select"
                                    },
                                    {
                                        "uicontrol": {
                                            "#tail": ".",
                                            "#text": "OK"
                                        },
                                        "#text": "Enter a beginning year and an ending year in the date boxes and select"
                                    }
                                ]
                            }
                        }
                    }
                ]
            },
            "result": {
                "p": [
                    "Your results are updated to show only those documents that fall within the date range you selected.",
                    {
                        "image": {
                            "@alt": "Close level",
                            "@href": "Closeremove.png",
                            "@placement": "inline",
                            "#tail": ") next to the list of dates displayed at the top of the"
                        },
                        "uicontrol": [
                            {
                                "#tail": "pane.  To remove all filters at once, select",
                                "#text": "Narrow By"
                            },
                            {
                                "#tail": ".",
                                "#text": "Clear"
                            }
                        ],
                        "#text": "To return to your original results set, select the Remove icon ("
                    }
                ]
            }
        }
    }
}