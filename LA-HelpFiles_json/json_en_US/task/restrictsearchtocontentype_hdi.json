{
    "task": {
        "@otherprops": "searchexplore",
        "@id": "restrictsearchtocontentype_hdi",
        "title": "How do I restrict my search to a specific category?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            },
            "data": "focus"
        },
        "taskbody": {
            "context": {
                "p": "Use one of the following methods to restrict your search."
            }
        },
        "task": [
            {
                "@id": "fromexplorecontent",
                "title": "From Explore Content:",
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": ",",
                                            "#text": "Content Type"
                                        },
                                        {
                                            "#tail": ",",
                                            "#text": "Federal"
                                        },
                                        {
                                            "#tail": ", or",
                                            "#text": "State"
                                        },
                                        {
                                            "#tail": ".",
                                            "#text": "Practice Area"
                                        }
                                    ],
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": "Select the content you want to search in."
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "or select the specific sources you want to search in.",
                                        "#text": "Search all sources on this page"
                                    },
                                    "#text": "On the search form that appears, select"
                                },
                                "stepresult": {
                                    "note": "If you have selected any other filters for this search, they will be replaced by your selection."
                                }
                            },
                            {
                                "cmd": "Enter your search terms in the search box."
                            },
                            {
                                "cmd": {
                                    "image": {
                                        "@alt": "Search",
                                        "@href": "redmagnifyglass.png",
                                        "@placement": "inline",
                                        "#tail": ")."
                                    },
                                    "#text": "Select the search button ("
                                }
                            }
                        ]
                    }
                }
            },
            {
                "@id": "fromsearchbox",
                "title": "From the search box:",
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": "On the search form, enter your search terms in the search box."
                            },
                            {
                                "cmd": {
                                    "image": {
                                        "@alt": "more",
                                        "@href": "TriangleDown.png",
                                        "@placement": "inline",
                                        "#tail": ") to the right of the"
                                    },
                                    "uicontrol": {
                                        "#tail": "button.",
                                        "#text": "Search: Everything"
                                    },
                                    "#text": "Select the down arrow ("
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": "from the",
                                            "#text": "Category"
                                        },
                                        {
                                            "#tail": "pane on the left.",
                                            "#text": "Narrow By:"
                                        }
                                    ],
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": ",",
                                            "#text": "Cases"
                                        },
                                        {
                                            "#tail": ", and",
                                            "#text": "Statutes & Legislation"
                                        },
                                        {
                                            "#tail": ".",
                                            "#text": "Secondary Materials"
                                        }
                                    ],
                                    "#text": "Select one or more checkboxes for the categories you want to restrict your search to. For example, to restrict your results to cases, statutes, and secondary materials, select the checkboxes for"
                                }
                            },
                            {
                                "cmd": {
                                    "image": {
                                        "@alt": "Search",
                                        "@href": "redmagnifyglass.png",
                                        "@placement": "inline",
                                        "#tail": ")."
                                    },
                                    "#text": "Select the search button ("
                                }
                            }
                        ]
                    },
                    "result": {
                        "p": "Your results will contain documents only from the categories you selected.",
                        "note": {
                            "uicontrol": {
                                "#tail": "on the Filters page and used for future searches until you change it.",
                                "#text": "Narrow By"
                            },
                            "#text": "The selections you make from Categories will be displayed next to"
                        }
                    }
                }
            }
        ]
    }
}