{
    "task": {
        "@otherprops": "searchexplore",
        "@id": "searchlistofsources_hdi",
        "title": "How do I restrict my search to a specific source?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2015"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2015-09-04"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "Use one of the following methods to restrict your search."
            }
        },
        "task": [
            {
                "@id": "fromexplorecontent",
                "title": "From Explore Content:",
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": ",",
                                            "#text": "Content Type"
                                        },
                                        {
                                            "#tail": ",",
                                            "#text": "Federal"
                                        },
                                        {
                                            "#tail": ", or",
                                            "#text": "State"
                                        },
                                        {
                                            "#tail": ".",
                                            "#text": "Practice Area"
                                        }
                                    ],
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": "Select the content you want to search in."
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "or select the specific sources you want to search in.",
                                        "#text": "Search all sources on this page"
                                    },
                                    "#text": "On the search form that appears, select"
                                },
                                "stepresult": {
                                    "note": "If you have selected any other filters for this search, they will be replaced by your selection."
                                }
                            },
                            {
                                "cmd": "Enter your search terms in the search box."
                            },
                            {
                                "cmd": {
                                    "image": {
                                        "@alt": "Search",
                                        "@href": "redmagnifyglass.png",
                                        "@placement": "inline",
                                        "#tail": ")."
                                    },
                                    "#text": "Select the search button ("
                                }
                            }
                        ]
                    }
                }
            },
            {
                "@id": "frombrowse",
                "title": "From the Browse drop-down menu:",
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "ph": {
                                        "@keyref": "prodnamefirst",
                                        "#tail": "home page, select the"
                                    },
                                    "uicontrol": {
                                        "#tail": "drop-down menu at the top of the page.",
                                        "#text": "Browse"
                                    },
                                    "#text": "On the"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Sources"
                                    },
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": "Do one of the following:",
                                "choicetable": {
                                    "chhead": {
                                        "choptionhd": "To...",
                                        "chdeschd": "Do This"
                                    },
                                    "chrow": [
                                        {
                                            "choption": "Search for a source",
                                            "chdesc": {
                                                "uicontrol": {
                                                    "#tail": "in the left pane, then select the search icon (",
                                                    "#text": "Search for a source"
                                                },
                                                "image": {
                                                    "@alt": "Search",
                                                    "@href": "search.png",
                                                    "@placement": "inline",
                                                    "#tail": ")."
                                                },
                                                "#text": "Enter the name (or part of a name) of a source under"
                                            }
                                        },
                                        {
                                            "choption": "Browse through all sources alphabetically",
                                            "chdesc": {
                                                "uicontrol": {
                                                    "#tail": ", then use the alphabetical listing to find the source you want.",
                                                    "#text": "All Sources"
                                                },
                                                "#text": "Select"
                                            }
                                        },
                                        {
                                            "choption": "Select a source by category, jurisdiction, practice area, or publisher",
                                            "chdesc": {
                                                "uicontrol": [
                                                    {
                                                        "#tail": ",",
                                                        "#text": "By Category"
                                                    },
                                                    {
                                                        "#tail": ",",
                                                        "#text": "By Jurisdiction"
                                                    },
                                                    {
                                                        "#tail": ", etc. from the list, then select a sub-category, if there is one.",
                                                        "#text": "By Practice Area"
                                                    }
                                                ],
                                                "#text": "Select"
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "cmd": "When you see the source you want to use, select it."
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ". If you have selected any other filters for this search, they will be replaced by your selection.",
                                        "#text": "Add source as a search filter"
                                    },
                                    "#text": "From the menu that appears, select"
                                }
                            }
                        ]
                    }
                }
            }
        ]
    }
}