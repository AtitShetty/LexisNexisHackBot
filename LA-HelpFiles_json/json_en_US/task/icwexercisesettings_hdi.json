{
    "task": {
        "@otherprops": "icwprofessor",
        "@audience": "icw",
        "@id": "icwresetexercise_hdi",
        "title": {
            "ph": {
                "@keyref": "icwnamefirst",
                "#tail": "'s exercise settings?"
            },
            "#text": "How do I change"
        },
        "prolog": {
            "author": "Garth Lewis",
            "copyright": {
                "copyryear": {
                    "@year": "2014"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2014-04-22"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": {
                    "ph": [
                        {
                            "@keyref": "prodnamefirst",
                            "#tail": "Settings allow you to set the number of times students are allowed to try to solve each exercise problem before"
                        },
                        {
                            "@keyref": "icwnamefirst",
                            "#tail": "marks the problem wrong and moves on. Follow these steps to assign that number."
                        }
                    ]
                }
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "drop-down in the top right corner of any",
                                    "#text": "More"
                                },
                                {
                                    "#tail": ".",
                                    "#text": "Settings"
                                }
                            ],
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "page, select"
                            },
                            "#text": "From the"
                        },
                        "stepresult": {
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "takes you to the Settings page."
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "ph": {
                                    "@keyref": "icwnamefirst"
                                },
                                "#tail": ".",
                                "#text": "Lexis"
                            },
                            "#text": "From the list on the left, select"
                        },
                        "stepresult": {
                            "ph": {
                                "@keyref": "icwnamefirst",
                                "#tail": "form appears."
                            },
                            "#text": "The Lexis"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "drop-down list, select the number of chances you want your students to have with a given exercise.",
                                "#text": "Maximum Attempts"
                            },
                            "#text": "From the"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button.",
                                "#text": "Save Settings & Close"
                            },
                            "#text": "Select the"
                        },
                        "stepresult": {
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "saves your selections and returns you to the last page you were viewing."
                            }
                        }
                    }
                ]
            }
        }
    }
}