                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "link.",
                                            "#text": "Cases"
                                        },
                                        "#text": "Select the"
                                    }
                                },
                                {
                                    "choption": "View briefs, motions, or pleadings which reference the expert",
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "link.",
                                            "#text": "Briefs, Pleadings, and Motions"
                                        },
                                        "#text": "Select the"
                                    }
                                }
                            ]
                        }
