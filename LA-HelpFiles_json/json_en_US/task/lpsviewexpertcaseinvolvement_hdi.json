                                {
                                    "choption": {
                                        "xref": {
                                            "@scope": "peer",
                                            "@href": "lpsvsgraphs_ref.xml",
                                            "#tail": "that describes the expert witness' involvement in a case",
                                            "#text": "chart or graph"
                                        },
                                        "#text": "View a"
                                    },
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "link.",
