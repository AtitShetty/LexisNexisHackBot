                    {
                        "cmd": {
                            "ph": {
                                "@keyref": "vsaname",
                                "#tail": "search and view your results."
                            },
                            "#text": "Complete your"
                        }
                    },
                    {
                        "cmd": {
                            "image": [
                                {
                                    "@alt": "Delivery Settings",
                                    "@href": "deliverysettings.png",
