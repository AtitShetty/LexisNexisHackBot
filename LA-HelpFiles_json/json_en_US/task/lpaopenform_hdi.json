{
    "task": {
        "@otherprops": "lparesults;lparecentlyviewedtips",
        "@audience": "lpa",
        "@id": "lpaopenform_hdi",
        "title": "How do I open a form?",
        "prolog": {
            "author": [
                "Robin Evans",
                "Garth Lewis",
                "Paul Claggett"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2012"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2012-10-01"
                },
                "revised": [
                    {
                        "@modified": "2014-04-03"
                    },
                    {
                        "@modified": "2014-07-18"
                    },
                    {
                        "@modified": "2016-02-20"
                    }
                ]
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": [
                    {
                        "ph": {
                            "@keyref": "lpanamefirst",
                            "#tail": "from a number of places in the application.  Select from the following list to see how to open forms from that source."
                        },
                        "#text": "You can open forms in"
                    },
                    {
                        "xref": {
                            "@href": "javascript:hwToggle('searchResults');",
                            "b": "To open from Search Results:"
                        }
                    },
                    {
                        "@id": "searchResults",
                        "@outputclass": "hidden",
                        "ol": {
                            "li": [
                                {
                                    "ph": {
                                        "@keyref": "lpaname",
                                        "#tail": "page, type a keyword for the form you want."
                                    },
                                    "#text": "In the search field in the gray navigation bar at the top of any"
                                },
                                {
                                    "uicontrol": [
                                        {
                                            "#tail": "drop-down list to open  the",
                                            "#text": "Filters"
                                        },
                                        {
                                            "#tail": "pop-up.",
                                            "#text": "Narrow By"
                                        }
                                    ],
                                    "#text": "Select the"
                                },
                                {
                                    "uicontrol": [
                                        {
                                            "#tail": "section, select",
                                            "#text": "Category Type"
                                        },
                                        {
                                            "#tail": "to designate forms as the default content type for your searches.",
                                            "#text": "Forms"
                                        }
                                    ],
                                    "#text": "In the"
                                },
                                {
                                    "uicontrol": {
                                        "#tail": "section, select the practice areas and topics you want to search.",
                                        "#text": "Practice Area & Topics"
                                    },
                                    "note": {
                                        "@type": "tip",
                                        "#text": "Leave all the checkboxes blank to search for forms in all practice areas and topics."
                                    },
                                    "#text": "From the"
                                },
                                {
                                    "uicontrol": {
                                        "#tail": "to display a list of all the Forms containing your search criteria in the selected Practice Areas and Topics.",
                                        "#text": "Search"
                                    },
                                    "#text": "Click"
                                },
                                "Select the link for the form you want to open."
                            ]
                        }
                    },
                    {
                        "xref": {
                            "@href": "javascript:hwToggle('recentlyViewed');",
                            "b": "To open from your Recently Browsed Documents pane:"
                        }
                    },
                    {
                        "@id": "recentlyViewed",
                        "@outputclass": "hidden",
                        "ul": {
                            "li": {
                                "uicontrol": [
                                    {
                                        "#tail": "drop-down at the top of any",
                                        "#text": "History"
                                    },
                                    {
                                        "#tail": "to display a list of the five documents you viewed most recently. Select the form you want.",
                                        "#text": "Recent Documents"
                                    }
                                ],
                                "ph": {
                                    "@keyref": "lpaname",
                                    "#tail": "page, select"
                                },
                                "#text": "From the"
                            }
                        },
                        "note": {
                            "@type": "tip",
                            "uicontrol": {
                                "#tail": ".  You can search the resulting list for the form you want.",
                                "#text": "View all history"
                            },
                            "#text": "To see a listing of all your activities, select"
                        }
                    },
                    {
                        "xref": {
                            "@href": "javascript:hwToggle('updatesIn');",
                            "b": "To open from your Updates in... pane:"
                        }
                    },
                    {
                        "@id": "updatesIn",
                        "@outputclass": "hidden",
                        "ul": {
                            "li": {
                                "ph": {
                                    "@keyref": "lpaname",
                                    "#tail": "page, from the"
                                },
                                "uicontrol": {
                                    "#tail": "pane, select the form you want.",
                                    "#text": "Updates in..."
                                },
                                "#text": "On the main"
                            }
                        }
                    },
                    {
                        "xref": {
                            "@href": "javascript:hwToggle('workspace');",
                            "b": {
                                "ph": {
                                    "@keyref": "lpaname",
                                    "#tail": ":"
                                },
                                "#text": "To open a form saved to a folder within"
                            }
                        }
                    },
                    {
                        "@id": "workspace",
                        "@outputclass": "hidden",
                        "note": {
                            "@type": "note",
                            "#text": "You need to add forms to a folder before you can open them this way."
                        },
                        "ol": {
                            "li": [
                                {
                                    "uicontrol": [
                                        {
                                            "#tail": "drop-down at the top of any",
                                            "#text": "More"
                                        },
                                        {
                                            "#tail": "to display a list view of the folders you have created.",
                                            "#text": "Folders"
                                        }
                                    ],
                                    "ph": {
                                        "@keyref": "lpaname",
                                        "#tail": "page, select"
                                    },
                                    "#text": "From the"
                                },
                                "Select the folder containing the form you want to open to see a list of the folders and documents in the selected folder.",
                                "Select the name of a form to open the form and any notes associated with it in a new page."
                            ]
                        }
                    },
                    {
                        "xref": {
                            "@href": "javascript:hwToggle('index');",
                            "b": {
                                "ph": {
                                    "@keyref": "lpaname",
                                    "#tail": "Forms Index:"
                                },
                                "#text": "To open a form from the"
                            }
                        }
                    },
                    {
                        "@id": "index",
                        "@outputclass": "hidden",
                        "ul": {
                            "li": [
                                {
                                    "uicontrol": [
                                        {
                                            "#tail": "pane on the",
                                            "#text": "Forms Index"
                                        },
                                        {
                                            "#tail": "to open the entire forms index. Select the link for the form you want to open by browsing, filtering, or searching by form and summary.",
                                            "#text": "View forms for all practice areas"
                                        }
                                    ],
                                    "ph": {
                                        "@keyref": "lpaname",
                                        "#tail": "home page, select the link for the selected practice area to open the"
                                    },
                                    "xref": {
                                        "@scope": "peer",
                                        "@href": "lpaformsindex_cpt.xml",
                                        "#tail": "for that practice area or select",
                                        "#text": "forms index"
                                    },
                                    "#text": "In the"
                                },
                                {
                                    "uicontrol": {
                                        "#tail": "fly-out menu.",
                                        "#text": "Topics"
                                    },
                                    "#text": "You can also open the forms index for a particular practice area from the topics menu on any subtopic page within that practice area by selecting the link at the bottom of the"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}