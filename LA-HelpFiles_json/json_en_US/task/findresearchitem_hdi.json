{
    "task": {
        "@otherprops": "history;folders",
        "@id": "findresearchitem_hdi",
        "title": "How do I find an item from my previous research?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": {
                    "uicontrol": [
                        {
                            "#tail": ".  To find an item you have saved to one of your folders, search in",
                            "#text": "History"
                        },
                        {
                            "#tail": ".",
                            "#text": "Folders"
                        }
                    ],
                    "#text": "You can find a document, a section of text, a search, a note, an item you printed, or other items from your previous research activities.  To find an item from up to the last 90 days, search in"
                }
            }
        },
        "task": [
            {
                "@id": "searchhistory",
                "title": {
                    "uicontrol": {
                        "#tail": ":",
                        "#text": "History"
                    },
                    "#text": "To search"
                },
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": "drop-down list at the top of any page, then select",
                                            "#text": "History"
                                        },
                                        {
                                            "#tail": ".",
                                            "#text": "View all history"
                                        }
                                    ],
                                    "#text": "Select the"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": "to view your searches in a results list, or select",
                                            "#text": "List"
                                        },
                                        {
                                            "#tail": "to view your searches graphically.",
                                            "#text": "Research Map"
                                        }
                                    ],
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Search Within History"
                                    },
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "image": {
                                        "@alt": "Search",
                                        "@href": "Search.png",
                                        "@placement": "inline",
                                        "#tail": ").  For example, you can enter the name (or part of the name) of a document, a document citation, a term or terms from a previous search, a client/matter ID, and so on. Select the"
                                    },
                                    "uicontrol": [
                                        {
                                            "#tail": ",",
                                            "#text": "Date"
                                        },
                                        {
                                            "#tail": ", or",
                                            "#text": "Type"
                                        },
                                        {
                                            "#tail": "headings if you want your results to be sorted by those criteria.",
                                            "#text": "Client"
                                        }
                                    ],
                                    "#text": "Type the words you want to search for and select the search icon ("
                                }
                            }
                        ]
                    }
                }
            },
            {
                "@id": "searchfolders",
                "title": {
                    "uicontrol": {
                        "#tail": ":",
                        "#text": "Folders"
                    },
                    "#text": "To search"
                },
                "taskbody": {
                    "steps": {
                        "step": [
                            {
                                "cmd": {
                                    "uicontrol": [
                                        {
                                            "#tail": "from the",
                                            "#text": "Folders"
                                        },
                                        {
                                            "#tail": "drop-down menu at the top of any page.",
                                            "#text": "More"
                                        }
                                    ],
                                    "#text": "Select"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "box at the top left of the page that appears, type the words you want to search for and select the search icon (",
                                        "#text": "Search Within All Folders"
                                    },
                                    "image": {
                                        "@alt": "Search",
                                        "@href": "Search.png",
                                        "@placement": "inline",
                                        "#tail": ").  For example, you can enter the name (or part of the name) of a document, a document citation, a term or terms from a previous search, a client/matter ID, and so on."
                                    },
                                    "#text": "In the"
                                }
                            },
                            {
                                "cmd": {
                                    "uicontrol": {
                                        "#tail": "at the top of the page.",
                                        "#text": "Clear search"
                                    },
                                    "#text": "To return to the folder page you were viewing before searching your history, select"
                                }
                            }
                        ]
                    },
                    "result": {
                        "note": {
                            "@type": "note",
                            "#text": "You can also search your folders from an open item in one of your folders, at the top left of the page."
                        }
                    }
                }
            }
        ]
    }
}