{
    "task": {
        "@otherprops": "res;custompage",
        "@audience": "res",
        "@id": "custompagedit_hdi",
        "title": "How do I edit a custom page I have created?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2017-08-28"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "You can edit a custom page you have created at any time."
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "pod on the",
                                "#text": "Custom Pages"
                            },
                            "ph": {
                                "@keyref": "prodname",
                                "#tail": "landing page."
                            },
                            "#text": "Select the custom page from the"
                        }
                    },
                    {
                        "cmd": "Choose one of the options below to edit it:",
                        "choicetable": {
                            "chrow": [
                                {
                                    "choption": "To remove a custom page",
                                    "chdesc": {
                                        "uicontrol": [
                                            {
                                                "#tail": "from the",
                                                "#text": "Delete"
                                            },
                                            {
                                                "#tail": "menu at the top of the page.",
                                                "#text": "Actions"
                                            }
                                        ],
                                        "#text": "Select"
                                    }
                                },
                                {
                                    "choption": "To edit the name of a custom page",
                                    "chdesc": {
                                        "image": {
                                            "@alt": "Edit",
                                            "@href": "iconpencil.png",
                                            "@placement": "inline"
                                        },
                                        "#text": "Place your cursor over the title and select the edit icon"
                                    }
                                },
                                {
                                    "choption": "To edit the name of a pod on the page",
                                    "chdesc": {
                                        "image": {
                                            "@alt": "Tools",
                                            "@href": "Icontools.png",
                                            "@placement": "inline",
                                            "#tail": "inside the pod name and select"
                                        },
                                        "uicontrol": {
                                            "#tail": ".",
                                            "#text": "Edit"
                                        },
                                        "#text": "Select the tools icon"
                                    }
                                },
                                {
                                    "choption": "To add more pods",
                                    "chdesc": {
                                        "image": {
                                            "@alt": "Add",
                                            "@href": "addropdown.png",
                                            "@placement": "inline",
                                            "#tail": "at the top of the page and select"
                                        },
                                        "uicontrol": [
                                            {
                                                "#tail": "or",
                                                "#text": "content"
                                            },
                                            {
                                                "#tail": ".",
                                                "#text": "tools"
                                            }
                                        ],
                                        "#text": "Select"
                                    }
                                },
                                {
                                    "choption": "To change the order of the sources in a pod",
                                    "chdesc": {
                                        "image": {
                                            "@alt": "Tools",
                                            "@href": "Icontools.png",
                                            "@placement": "inline",
                                            "#tail": "inside the pod name and select"
                                        },
                                        "uicontrol": [
                                            {
                                                "#tail": ". The content for that pod will display with the sources you selected displayed on the right side.  Drag and drop the sources until they are in the order you want, and then select",
                                                "#text": "Edit"
                                            },
                                            {
                                                "#tail": ".",
                                                "#text": "Save"
                                            }
                                        ],
                                        "#text": "Select the tools icon"
                                    }
                                },
                                {
                                    "choption": "To remove a pod from the page",
                                    "chdesc": {
                                        "image": {
                                            "@alt": "Tools",
                                            "@href": "Icontools.png",
                                            "@placement": "inline",
                                            "#tail": "inside the pod name and select"
                                        },
                                        "uicontrol": {
                                            "#tail": ".",
                                            "#text": "Delete"
                                        },
                                        "#text": "Select the tools icon"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}