                                {
                                    "choption": "Shepardize the document",
                                    "chdesc": "If available, click the Shepard's Signal indicator."
                                },
                                {
                                    "choption": "Copy the citation associated with the document",
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "button. See",
                                            "#text": "Copy Citation"
                                        },
                                        "xref": {
                                            "@scope": "peer",
                                            "@href": "copycitation_hdi.xml",
                                            "#tail": "for details."
                                        },
                                        "#text": "Click the"
                                    }
                                },
                                {
                                    "choption": "Change the font size to be larger or smaller",
                                    "chdesc": {
                                        "image": {
                                            "@alt": "Larger/Smaller Text",
                                            "@href": "doctextsize.png",
                                            "#tail": ") (located in the upper-right corner of the page)"
                                        },
                                        "#text": "Click the appropriate button ("
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Return to Full Document",
                                "@href": "docfullview.png",
                                "#tail": "button to return to the full document."
                            },
                            "#text": "When you are finished viewing the document in reading view, click the"
                        }
