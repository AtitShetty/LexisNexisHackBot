{
    "task": {
        "@otherprops": "alerteditips;alerteditopictips;alerteditlegislativetips;alerteditpendinglegislativetips;alerteditpubtips;alerts",
        "@id": "alertdocsearch_hdi",
        "title": "How do I search in a document found by an alert I created?",
        "prolog": {
            "author": "Christina Stommel",
            "copyright": {
                "copyryear": {
                    "@year": "2016"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2016-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": [
                    "When you view a document that appears in your alerts results list, you can search the text of the document for any search terms. You can also navigate using the document's reporter pagination.",
                    "To do this:"
                ]
            },
            "steps": {
                "step": [
                    {
                        "cmd": "Select a document from your alerts results list to view it."
                    },
                    {
                        "cmd": "Complete any of the following steps to navigate through the text of the document:",
                        "choicetable": {
                            "chhead": {
                                "choptionhd": "To...",
                                "chdeschd": "Do This"
                            },
                            "chrow": [
                                {
                                    "choption": "Display specific parts or sections of the document that you can navigate to quickly",
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "drop-down list  and choose the section of the document you want to view. (Which sections appear depends on the document.)",
                                            "#text": "Go to"
                                        },
                                        "#text": "Click the"
                                    }
                                },
                                {
                                    "@audience": "future",
                                    "choption": "Navigate through your search terms within the document text",
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "or select one of your search terms from the drop-down list and select the up or down arrows to go backward or forward in the document to specific search terms.",
                                            "#text": "All Terms"
                                        },
                                        "#text": "Select"
                                    }
                                },
                                {
                                    "choption": "Page through the document using the pagination of the reporter that is currently selected",
                                    "chdesc": {
                                        "image": [
                                            {
                                                "@alt": "Up",
                                                "@href": "TriangleUp.png",
                                                "#tail": "and"
                                            },
                                            {
                                                "@alt": "Down",
                                                "@href": "TriangleDown.png",
                                                "#tail": ") or enter the page number in the box and press Enter."
                                            }
                                        ],
                                        "#text": "Select the up or down arrows ("
                                    }
                                },
                                {
                                    "choption": "Search the document for specific search terms",
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": "button. Terms are highlighted in the document, and you can use the up or down arrows (",
                                            "#text": "Search"
                                        },
                                        "image": [
                                            {
                                                "@alt": "Up",
                                                "@href": "TriangleUp.png",
                                                "#tail": "and"
                                            },
                                            {
                                                "@alt": "Down",
                                                "@href": "TriangleDown.png",
                                                "#tail": ") to navigate between them. If you click these buttons and you are viewing the first or last term in the document, you will be taken to the previous or next document in your results list."
                                            }
                                        ],
                                        "#text": "Enter the terms for which you'd like to search and click the"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}