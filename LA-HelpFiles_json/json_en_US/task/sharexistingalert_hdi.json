{
    "task": {
        "@otherprops": "alertserror",
        "@id": "sharexistingalert_hdi",
        "title": "How do I share an existing alert with other users?",
        "prolog": {
            "author": [
                "Barb Bruns",
                "Christina Stommel (GDSI Release)"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": [
                    "You can share an existing alert with other users.",
                    "To do this:"
                ]
            },
            "steps": {
                "step": [
                    {
                        "cmd": "Do one of the following:",
                        "info": {
                            "ul": {
                                "li": [
                                    {
                                        "ph": {
                                            "@keyref": "prodnamefirst",
                                            "#tail": "home page, select the"
                                        },
                                        "uicontrol": [
                                            {
                                                "#tail": "link in the",
                                                "#text": "View all alerts"
                                            },
                                            {
                                                "#tail": "pod.",
                                                "#text": "Alerts"
                                            }
                                        ],
                                        "#text": "On the"
                                    },
                                    {
                                        "uicontrol": [
                                            {
                                                "#tail": "from the",
                                                "#text": "Alerts"
                                            },
                                            {
                                                "#tail": "drop-down list at the top of any page.",
                                                "#text": "More"
                                            }
                                        ],
                                        "#text": "Choose"
                                    }
                                ]
                            }
                        },
                        "stepresult": {
                            "p": "The Alerts page appears"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Edit"
                            },
                            "#text": "Locate the alert you want to share and select"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "tab.",
                                "#text": "Share"
                            },
                            "#text": "Click the"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "to add it to the added contacts list.",
                                "#text": "Add to Share"
                            },
                            "#text": "Enter a user's first or last name or email address to find it in the list and select"
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Remove",
                                "@href": "Closeremove.png",
                                "@placement": "inline",
                                "#tail": "associated with the contact."
                            },
                            "#text": "If you need to remove any users from the Added Contacts list, select the"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Save"
                            },
                            "#text": "Click"
                        }
                    }
                ]
            },
            "result": {
                "p": {
                    "uicontrol": [
                        {
                            "#tail": "group of the left-side pane.  You'll find the document in the",
                            "#text": "Shared by others"
                        },
                        {
                            "#tail": "group.",
                            "#text": "Shared by me"
                        }
                    ],
                    "#text": "The users you have shared with will be notified by email, and will find the document in the"
                }
            }
        }
    }
}