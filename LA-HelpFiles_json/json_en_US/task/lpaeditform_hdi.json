        "@id": "lpaeditform_hdi",
        "title": "How do I edit a form?",
        "prolog": {
            "author": [
                "Robin Evans",
                "Garth Lewis"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2012"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2012-10-01"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": {
                    "ph": {
                        "@keyref": "lpanamefirst",
                        "#tail": ", follow the steps below."
                    },
                    "#text": "To edit a form in"
                }
            },
            "steps": {
                "step": [
                    {
                        "cmd": "Open the form you want to edit.",
                        "stepresult": {
                            "note": {
                                "@type": "note",
                                "xref": {
                                    "@scope": "peer",
                                    "@href": "lpaopenform_hdi.xml",
                                    "#tail": ".",
                                    "#text": "How do I open a form"
                                },
                                "#text": "For more information on opening forms, see the topic"
                            }
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Edit field",
                                "@href": "IconEditField.png",
                                "@placement": "inline",
                                "#tail": "."
                            },
                            "#text": "For the field you want to edit, select"
                        },
                        "stepresult": {
                            "uicontrol": {
                                "#tail": "pop-up appears.",
                                "#text": "Edit Field"
                            },
                            "#text": "The"
                        }
                    },
                    {
                        "cmd": "In the pop-up field, type the desired text."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button.",
                                "#text": "Apply"
                            },
                            "#text": "Select the"
                        },
                        "stepresult": {
                            "uicontrol": {
                                "#tail": "dialog box disappears, returning you to the form.  The value you typed should now appear in the field.",
                                "#text": "Edit Field"
                            },
                            "#text": "The"
                        }
                    },
                    {
                        "cmd": "Repeat steps 2 through 4 for any other fields you want to edit."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Folders"
                            },
                            "#text": "Download the edited form or save it to a folder under"
                        },
                        "stepresult": {
                            "note": {
                                "@type": "note",
                                "ul": {
                                    "li": [
                                        {
                                            "xref": {
                                                "@scope": "peer",
                                                "@href": "downloadresults_hdi.xml"
                                            }
                                        },
                                        {
                                            "xref": {
                                                "@scope": "peer",
                                                "@href": "saveresearch_hdi.xml"
                                            }
                                        }
                                    ]
                                },
                                "#text": "For more information, see the following topics:"
                            }
                        }
                    }
                ]
            }
        }
    }
}