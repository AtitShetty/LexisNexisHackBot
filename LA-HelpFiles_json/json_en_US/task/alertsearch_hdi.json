{
    "task": {
        "@otherprops": "alerts",
        "@id": "alertsearch_hdi",
        "title": "How do I find a specific alert?",
        "prolog": {
            "author": [
                "Barb Bruns",
                "Christina Stommel (GDSI Release)"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2006-10-03"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": [
                    "You can search your saved alerts to find a particular alert, search terms, or other words or phrases.",
                    "To search your alerts:"
                ]
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "from the",
                                    "#text": "Alerts"
                                },
                                {
                                    "#tail": "drop-down list at the top of any page.",
                                    "#text": "More"
                                }
                            ],
                            "#text": "Choose"
                        },
                        "info": {
                            "note": {
                                "@type": "note",
                                "ph": [
                                    {
                                        "@keyref": "vsanamefirst",
                                        "#tail": "and you view your alerts, the list is limited to show only"
                                    },
                                    {
                                        "@keyref": "vsaname",
                                        "#tail": "-related alerts. You can clear this filter and view all of your available alerts (regardless of which experience you are working in) by clicking the X next to the filter name, above the"
                                    }
                                ],
                                "uicontrol": {
                                    "#tail": "pane.",
                                    "#text": "Narrow By"
                                },
                                "#text": "When you first view the alerts list, it is filtered based on which experience you are working in when you view all alerts. For example, if you are working in"
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": [
                                {
                                    "#tail": "box at the top left of the page, type the words you want to search for and select",
                                    "#text": "Search Within Alerts"
                                },
                                {
                                    "#tail": ". For example, you can enter the name (or part of the name) of an alert, a term or terms from a previous search, a client ID, and so on.  Your results list is filtered to show only those results that contain the term on which you searched.",
                                    "#text": "Search"
                                }
                            ],
                            "#text": "In the"
                        },
                        "info": {
                            "note": {
                                "@type": "note",
                                "uicontrol": {
                                    "#tail": "link, located near the top of the page.",
                                    "#text": "Clear search"
                                },
                                "#text": "To return to the alerts page you were viewing prior to your search, select the"
                            }
                        }
                    }
                ]
            }
        }
    }
}