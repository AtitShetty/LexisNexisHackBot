        "taskbody": {
            "context": {
                "p": {
                    "ph": {
                        "@keyref": "icwname",
                        "#tail": "."
                    },
                    "#text": "Follow these steps to print a certificate for an exercise you have completed in"
                }
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "ph": {
                                "@keyref": "icwnamefirst",
                                "#tail": "Home page, select an exercise you have completed."
                            },
                            "#text": "From your"
                        },
                        "stepresult": "The start page for the selected exercise appears."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ". The Completion Certificate page appears. This page summarizes your results on the exercise.",
                                "#text": "View completion certificate"
                            },
                            "#text": "On the right side of the page, click"
                        },
                        "info": {
                            "note": {
                                "@type": "note",
                                "uicontrol": {
                                    "#tail": "link only appears if you have completed all the questions in the exercise.",
                                    "#text": "View completion certificate"
                                },
                                "#text": "The"
                            }
                        }
                    },
                    {
                        "cmd": {
                            "image": {
                                "@alt": "Print icon",
                                "@href": "Print.png",
                                "@placement": "inline",
                                "#tail": "). (Delivery options are consolidated under the icon for the last delivery option you used.)"
                            },
                            "#text": "At the top of the page, click the Print icon ("
                        },
                        "stepresult": "A drop-down appears, prompting you to choose how to print the certificate."
                    },
                    {
                        "cmd": "Do you want to use the default print settings?",
                        "choicetable": {
                            "chhead": {
                                "choptionhd": "If...",
                                "chdeschd": "Then..."
                            },
                            "chrow": [
                                {
                                    "choption": "Yes",
                                    "chdesc": {
                                        "uicontrol": {
                                            "#tail": ".",
                                            "#text": "Print Now"
                                        },
                                        "ph": {
                                            "@keyref": "icwname",
                                            "#tail": "sends the certificate to your printer using the system default print settings."
                                        },
                                        "#text": "Select"
                                    }
                                },
                                {
                                    "choption": "No",
                                    "chdesc": {
                                        "ol": {
                                            "li": [
                                                {
                                                    "uicontrol": [
                                                        {
                                                            "#tail": ". The",
                                                            "#text": "Print using options"
                                                        },
                                                        {
                                                            "#tail": "dialog appears.",
                                                            "#text": "Print"
                                                        }
                                                    ],
                                                    "#text": "Select"
                                                },
                                                "Select the options you want to include.",
                                                {
                                                    "uicontrol": {
                                                        "#tail": "button.",
                                                        "#text": "Print"
                                                    },
                                                    "ph": {
                                                        "@keyref": "icwname",
                                                        "#tail": "sends the certificate to your printer using the print settings you selected."
                                                    },
                                                    "#text": "Click the"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        "info": {
                            "note": {
                                "@type": "tip",
                                "uicontrol": {
                                    "#tail": "dialog and the available options, see the",
                                    "#text": "Print"
                                },
                                "xref": {
                                    "@scope": "peer",
                                    "@href": "attachprintips.xml",
                                    "#tail": ".",
                                    "#text": "Print Page topic"
                                },
                                "#text": "For detailed information about the"
                            }
                        }
                    }
                ]
            }
        }
