                    {
                        "cmd": {
                            "image": {
                                "@alt": "Remove",
                                "@href": "Closeremove.png",
                                "@placement": "inline",
                                "#tail": "to remove any users from the selected list."
                            },
                            "#text": "Optionally, click"
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Save"
