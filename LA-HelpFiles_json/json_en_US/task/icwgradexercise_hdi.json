{
    "task": {
        "@otherprops": "icwprofessor",
        "@audience": "icw",
        "@id": "icwresetexercise_hdi",
        "title": {
            "ph": {
                "@keyref": "icwnamefirst",
                "#tail": "exercises by manual?"
            },
            "#text": "How do I grade"
        },
        "prolog": {
            "author": "Garth Lewis",
            "copyright": {
                "copyryear": {
                    "@year": "2014"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2014-04-22"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": "Follow these steps to assign or edit grades for an exercise."
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "ph": {
                                "@keyref": "icwnamefirst",
                                "#tail": "Home page, at the bottom of the pod for the manual containing the exercises you want to grade, select"
                            },
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "View student progress for..."
                            },
                            "#text": "From your"
                        },
                        "stepresult": "The Student Progress page for the selected manual appears."
                    },
                    {
                        "cmd": {
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "takes you to the Student Progress page for that exercise. This page lists all the students to whom you have been assigned, showing their current status with the selected exercise and allowing you to take specific actions."
                            },
                            "#text": "Select the name of the exercise you want to grade."
                        },
                        "info": {
                            "note": {
                                "@type": "tip",
                                "#text": "The exercise manual pods on the Home page display the five most recently worked exercises. If the exercise you want to grade appears in a pod, you can go directly to the Student Progress page for that exercise by clicking its name in the pod."
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button.",
                                "#text": "Action"
                            },
                            "#text": "In the far right column for the student you want to grade, select the"
                        },
                        "stepresult": "A drop-down menu of options appears."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ".",
                                "#text": "Edit or assign grade"
                            },
                            "#text": "Select"
                        },
                        "stepresult": "The Edit or Assign Grade form appears."
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "field, type the letter grade you want to give the student for the exercise.",
                                "#text": "Enter grade"
                            },
                            "#text": "In the"
                        },
                        "info": {
                            "note": {
                                "@type": "tip",
                                "#text": "You can include a plus (+) or minus (-)."
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": "button.",
                                "#text": "Save"
                            },
                            "ph": {
                                "@keyref": "icwname",
                                "#tail": "associates the grade you entered for the exercise with the selected student. The Edit or Assign Grade form closes, returning you to the student list."
                            },
                            "#text": "Select the"
                        }
                    },
                    {
                        "cmd": "Repeat steps 3 through 7 for any other students you want to grade for this exercise."
                    }
                ]
            }
        }
    }
}