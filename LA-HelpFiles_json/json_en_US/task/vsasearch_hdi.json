{
    "task": {
        "@otherprops": "vsasearch;VSAsourcelistips",
        "@audience": "vsa",
        "@id": "vsasearch_hdi",
        "title": {
            "ph": {
                "@keyref": "vsanamefirst",
                "#tail": "?"
            },
            "#text": "How do I search in"
        },
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2010"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2010-01-27"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "taskbody": {
            "context": {
                "p": [
                    {
                        "ph": {
                            "@keyref": "vsanamefirst",
                            "#tail": "examines the outcomes of cases similar to yours and summarizes the results in a series of graphs and charts, which can then be examined more closely for specific verdict information, such as the case topic, specific results, and key players."
                        }
                    },
                    {
                        "ph": {
                            "@keyref": "vsaname",
                            "#tail": ":"
                        },
                        "#text": "To search using"
                    }
                ]
            },
            "steps": {
                "step": [
                    {
                        "cmd": {
                            "xref": {
                                "@scope": "peer",
                                "@href": "assignclientid_hdi.xml",
                                "#tail": ", select a client from the",
                                "#text": "associate this search with a client"
                            },
                            "uicontrol": [
                                {
                                    "#tail": "drop-down list at the top of the page to associate this research with, or choose",
                                    "#text": "Client"
                                },
                                {
                                    "#tail": "from the drop-down list to enter a new one.",
                                    "#text": "Set/Add Client ID"
                                }
                            ],
                            "#text": "To"
                        }
                    },
                    {
                        "cmd": {
                            "xref": [
                                {
                                    "@scope": "peer",
                                    "@href": "restrictsearchtojurisdiction_hdi.xml",
                                    "#tail": "or",
                                    "#text": "Jurisdiction"
                                },
                                {
                                    "@scope": "peer",
                                    "@href": "restrictsearchtolegaltopic_hdi.xml",
                                    "#tail": ", select",
                                    "#text": "Practice Area & Topic"
                                }
                            ],
                            "uicontrol": {
                                "#tail": ", and then select the appropriate link to view and select from the available filters.",
                                "#text": "Filters"
                            },
                            "#text": "To filter your search by"
                        }
                    },
                    {
                        "cmd": "Enter your search terms in the search box.",
                        "info": {
                            "note": {
                                "@type": "tip",
                                "xref": {
                                    "@scope": "peer",
                                    "@href": "useconnectors_hdi.xml",
                                    "#tail": "to define relationships between multiple search terms.",
                                    "#text": "search connectors"
                                },
                                "#text": "Use"
                            }
                        }
                    },
                    {
                        "cmd": {
                            "uicontrol": {
                                "#tail": ". Your",
                                "#text": "Search"
                            },
                            "xref": {
                                "@scope": "peer",
                                "@href": "VSAsearchresults_cpt.xml",
                                "#tail": "are displayed.",
                                "#text": "search results"
                            },
                            "#text": "Click"
                        }
                    }
                ]
            }
        }
    }
}