{
    "reference": {
        "@otherprops": "sourcetips",
        "@audience": "res;urlapi",
        "@id": "sourcetips",
        "title": "Search In a Specific Source",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "LexisNexis"
            },
            "critdates": {
                "created": {
                    "@date": "2012-10-18"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance\u2122 URL API",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "note": {
                    "@conref": "urlapi_group_ref.xml#urlapi_group_ref/urlapinote"
                },
                "p": [
                    {
                        "uicontrol": {
                            "#tail": "parameter to search in a specific source.  You can use multiple sources, separated by a period. If you don't specify a source, all sources are searched.",
                            "#text": "source"
                        },
                        "#text": "Use the"
                    },
                    {
                        "ph": {
                            "@keyref": "companyfirst",
                            "#tail": "account representative to find out the value for the sources you want to search."
                        },
                        "#text": "Contact your"
                    },
                    "The source parameter is optional. It is shown below in a URL using search terms.",
                    {
                        "b": "URL Template"
                    },
                    {
                        "b": "{source-id}",
                        "#text": "http://advance.lexis.com/api/search?{search-terms}&"
                    },
                    {
                        "b": {
                            "#tail": "Please contact your account representative for a valid source value.",
                            "#text": "*"
                        }
                    },
                    null
                ],
                "example": {
                    "b": "source-id*",
                    "#text": "http://advance.lexis.com/api/search?q=burden%20of%20proof&"
                }
            },
            "properties": {
                "prophead": {
                    "propvaluehd": "Value",
                    "propdeschd": "Description"
                },
                "property": [
                    {
                        "propvalue": "search",
                        "propdesc": "Indicates the user wants to run a search and view the results."
                    },
                    {
                        "propvalue": "{search-terms}",
                        "propdesc": {
                            "p": {
                                "userinput": {
                                    "#tail": "in the URL to replace spaces between words in the search string.",
                                    "#text": "%20"
                                },
                                "#text": "Query parameter that contains the search syntax. Use"
                            },
                            "example": {
                                "b": {
                                    "#tail": "=breach%20of%20contract",
                                    "#text": "q"
                                }
                            }
                        }
                    },
                    {
                        "propvalue": "{source-id}",
                        "propdesc": {
                            "p": {
                                "ph": {
                                    "@keyref": "company",
                                    "#tail": "account representative to find out the value for the source you want to search."
                                },
                                "#text": "Query parameter that specifies the source. Contact your your"
                            },
                            "example": {
                                "b": {
                                    "#tail": "=source-id",
                                    "#text": "source"
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}