                            "xref": {
                                "@scope": "peer",
                                "@href": "mapfindsimilar_cpt.xml"
                            },
                            "#text": "For more information about the Find Similar Documents feature of the research map, see"
                        }
                    ]
                }
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Overview tab",
                        "propdesc": {
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Title",
                                        "dd": "Give the alert a name that you will use later to retrieve it."
                                    },
                                    {
                                        "dt": "Description",
                                        "dd": "Enter a description you want to associate with the alert."
                                    },
                                    {
                                        "dt": "Search terms",
                                        "dd": "Displays the search terms you used."
                                    },
                                    {
                                        "dt": "Client",
                                        "dd": {
                                            "uicontrol": [
                                                {
                                                    "#tail": "and choose a client you've recently used from the drop-down list, or select",
                                                    "#text": "Recent client"
                                                },
                                                {
                                                    "#tail": "to enter the name of a new client.",
                                                    "#text": "New client"
                                                }
                                            ],
                                            "#text": "Either select"
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "propvalue": "Monitor tab",
                        "propdesc": {
                            "dl": {
                                "dlentry": {
                                    "dt": "Category",
                                    "dd": {
                                        "uicontrol": {
                                            "#tail": "items from your results.",
                                            "#text": "Narrow By"
