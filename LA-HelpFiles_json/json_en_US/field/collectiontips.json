        "refbody": {
            "section": {
                "note": {
                    "@conref": "urlapi_group_ref.xml#urlapi_group_ref/urlapinote"
                },
                "p": [
                    {
                        "uicontrol": {
                            "#tail": "parameter to indicate the content type to search.  You can use multiple content types, separated by a period.  If you don't specify a content type, all content types are searched.",
                            "#text": "collection"
                        },
                        "#text": "Use the"
                    },
                    "The collection parameter is optional. It is shown below in a URL using search terms.",
                    {
                        "b": "URL Template"
                    },
                    {
                        "b": "{collection}",
                        "#text": "http://advance.lexis.com/api/search?{search-terms}&"
                    }
                ],
                "example": {
                    "b": "collection=cases.news",
                    "#text": "http://advance.lexis.com/api/search?q=burden%20of%20proof&"
                }
            },
            "properties": {
                "prophead": {
                    "propvaluehd": "Value",
                    "propdeschd": "Description"
                },
                "property": [
                    {
                        "propvalue": "search",
                        "propdesc": "Indicates the user wants to run a search and view the results."
                    },
                    {
                        "propvalue": "{search-terms}",
                        "propdesc": {
                            "p": {
                                "userinput": {
                                    "#tail": "in the URL to replace spaces between words in the search string.",
                                    "#text": "%20"
                                },
                                "#text": "Query parameter that contains the search syntax. Use"
                            },
                            "example": {
                                "b": {
                                    "#tail": "=breach%20of%20contract",
                                    "#text": "q"
                                }
                            }
                        }
                    },
                    {
                        "propvalue": "{collection}",
                        "propdesc": {
                            "p": [
                                "Query parameter that specifies the content type (Optional).",
                                "Possible values:"
                            ],
                            "example": {
