{
    "reference": {
        "@otherprops": "searchtips",
        "@audience": "res;lpa",
        "@id": "searchtips",
        "title": "Search Form",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2007-07-05"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "data": "hide,show",
                "p": {
                    "ph": [
                        {
                            "@keyref": "prodnamefirst",
                            "#tail": ", most everything you need to conduct your legal research is available from the"
                        },
                        {
                            "@keyref": "prodname",
                            "#tail": "home page.  You can search from the search box, or select from one of the pods below it for quick access to your recent search history, folders, alerts, etc. Access to support, including support phone numbers, tutorials, and help for the product, is also available. For more information about the items on the page, see the table below."
                        }
                    ],
                    "#text": "When you sign in to"
                },
                "note": {
                    "@type": "tip",
                    "ph": {
                        "@keyref": "companyfirst",
                        "#tail": "primary and secondary sources, plus related content on the Web, enter your search terms, document citation preceded by"
                    },
                    "userinput": {
                        "#tail": ", or just the words or phrases relating to issues or topics you're researching, and select the Search button.  See below for more options.",
                        "#text": "shep:"
                    },
                    "#text": "To begin your legal research across all the"
                }
            },
            "properties": {
                "property": [
                    {
                        "@audience": "res",
                        "propvalue": {
                            "ph": {
                                "@keyref": "prodnamefirst",
                                "#tail": "Research"
                            }
                        },
                        "propdesc": {
                            "p": {
                                "ph": [
                                    {
                                        "@keyref": "cbnamefirst",
                                        "#tail": ","
                                    },
                                    {
                                        "@keyref": "lpsnamefirst",
                                        "#tail": ", etc.  (The products you have access to depends on your"
                                    },
                                    {
                                        "@keyref": "prodname",
                                        "#tail": "subscription.)"
                                    }
                                ],
                                "#text": "Select this to open a list of other products, such as"
                            }
                        }
                    },
                    {
                        "@audience": "res",
                        "propvalue": "Browse",
                        "propdesc": {
                            "p": "Select this to select specific sources or legal topics to search in.",
                            "note": {
                                "@audience": "lpa",
                                "@type": "note",
                                "ph": {
                                    "@keyref": "lpanamefirst",
                                    "#tail": "."
                                },
                                "#text": "Browsing topics and sources is not available for"
                            }
                        }
                    },
                    {
                        "propvalue": "Client",
                        "propdesc": {
                            "p": "Select this to assign your research to a specific client or matter ID."
                        }
                    },
                    {
                        "propvalue": "History",
                        "propdesc": {
                            "p": "Select this to view your search history."
                        }
                    },
                    {
                        "propvalue": "More",
                        "propdesc": {
                            "p": {
                                "ph": {
                                    "@keyref": "prodname",
                                    "#tail": "."
                                },
                                "#text": "Select this for access to other functions such as alerts, notifications, etc. or for help with using"
                            }
                        }
                    },
                    {
                        "propvalue": "Search terms",
                        "propdesc": {
                            "p": "Enter your terms, document citation, words, or phrases, and select the Search button to begin your search.",
                            "ul": {
                                "li": [
                                    "Legal Phrases and Documents - If the terms you are typing are closely related to a legal phrase or document, you'll see a list of suggestions you can select from. Click one of these if you want to see the results for the suggestion instead of what you are typing. The legal phrase or document name will replace the terms you were entering in the search box.",
                                    {
                                        "uicontrol": {
                                            "#tail": "to remove the sources.",
                                            "#text": "Clear"
                                        },
                                        "#text": "Sources - If the terms you are typing are closely related to a source name, you'll see a list of suggested sources you can select from. Click one of these if you want to search in the source. The sources you select will display under the search box. Click"
                                    }
                                ]
                            },
                            "note": [
                                {
                                    "@audience": "res",
                                    "@type": "note",
                                    "i": {
                                        "#tail": "\u00ae a citation, type",
                                        "#text": "Shepardize"
                                    },
                                    "userinput": {
                                        "#tail": "followed by the document citation.",
                                        "#text": "shep:"
                                    },
                                    "#text": "To"
                                },
                                {
                                    "@type": "tip",
                                    "userinput": [
                                        {
                                            "#tail": ",",
                                            "#text": "near"
                                        },
                                        {
                                            "#tail": ",",
                                            "#text": "and"
                                        },
                                        {
                                            "#tail": ",",
                                            "#text": "not"
                                        },
                                        {
                                            "#tail": ", and * to link your search terms and find word variations.  For more information and example searches, see",
                                            "#text": "or"
                                        }
                                    ],
                                    "xref": {
                                        "@scope": "peer",
                                        "@href": "connectors_group_ref.xml"
                                    },
                                    "#text": "Use"
                                }
                            ]
                        }
                    },
                    {
                        "propvalue": {
                            "image": {
                                "@alt": "Search",
                                "@href": "searcheverything.png",
                                "@placement": "inline"
                            }
                        },
                        "propdesc": {
                            "p": "Select the down arrow on this button to narrow your search to one or more of these criteria:",
                            "ul": {
                                "li": [
                                    "Jurisdiction",
                                    "Category (such as Cases, Statutes & Legislation, Administrative Materials, etc.)",
                                    "Practice Area & Topic",
                                    "Recent & Favorites (your recently used searches, filters, etc.)"
                                ]
                            },
                            "ph": {
                                "@audience": "exclude",
                                "uicontrol": {
                                    "#tail": "form for help in constructing your search to include or exclude certain words or phrases.",
                                    "#text": "Advanced Search"
                                },
                                "#text": "Or, open the"
                            }
                        }
                    },
                    {
                        "propvalue": {
                            "image": {
                                "@alt": "Search",
                                "@href": "redmagnifyglass.png",
                                "@placement": "inline"
                            }
                        },
                        "propdesc": "Click this to begin your search."
                    },
                    {
                        "propvalue": "Pods",
                        "propdesc": {
                            "p": "The area below the search box provides access to previous research, recent updates, and support:",
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "History",
                                        "dd": {
                                            "uicontrol": [
                                                {
                                                    "#tail": ", or select",
                                                    "#text": "View all history"
                                                },
                                                {
                                                    "#tail": "for a graphical view.",
                                                    "#text": "Research Map"
                                                }
                                            ],
                                            "#text": "Select a specific link to refine or reuse a recent search, or to review the documents it found.  To view all of your search history, select"
                                        }
                                    },
                                    {
                                        "dt": "Folders",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".",
                                                "#text": "View all folders"
                                            },
                                            "#text": "The folders you've created and the documents in them.  To view a specific folder, select its link. To view all of your folders, select"
                                        }
                                    },
                                    {
                                        "dt": "News",
                                        "dd": {
                                            "ph": {
                                                "@keyref": "prodname",
                                                "#tail": "."
                                            },
                                            "#text": "Current news stories and updates about"
                                        }
                                    },
                                    {
                                        "dt": "Favorites",
                                        "dd": "Select the arrow to open the list of searches, sources, or filters you have saved as favorites."
                                    },
                                    {
                                        "dt": "Alerts",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".",
                                                "#text": "View all alerts"
                                            },
                                            "#text": "Your most recent alerts. To view a specific alert, select its link. To view all of your alerts, select"
                                        }
                                    },
                                    {
                                        "dt": "Notifications",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".",
                                                "#text": "View all notifications"
                                            },
                                            "#text": "The notices you have received regarding the status of documents, folders, and alerts that you have shared or that have been shared with you. To view a specific notification, select its link. To view all of your notifications, select"
                                        }
                                    },
                                    {
                                        "dt": "Support",
                                        "dd": {
                                            "ph": {
                                                "@keyref": "prodname",
                                                "#tail": "by viewing a quick tutorial. You'll also find our Customer Support phone numbers here."
                                            },
                                            "#text": "Have a question? Look in the help to find the answer, or learn more about"
                                        }
                                    }
                                ]
                            }
                        }
                    }
                ]
            }
        }
    }
}