{
    "reference": {
        "@otherprops": "alertcreatentitytips",
        "@audience": "Future",
        "@id": "alertcreatentitytips",
        "title": "Create New Entity Alert Page",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
