        "refbody": {
            "section": {
                "p": "This form allows you to view, edit, or delete a note you stored with a document."
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Notes text box",
                        "propdesc": "Shows the text box where you can make the changes to the text of your annotation. Your annotation can be up to 4,000 characters and be formatted to appear bold, underlined, or italicized."
                    },
                    {
                        "propvalue": {
                            "image": {
                                "@alt": "Edit",
                                "@href": "pencil.png",
                                "@placement": "inline"
                            }
                        },
                        "propdesc": "Click this to edit an existing note."
                    },
                    {
                        "propvalue": "Highlight color",
                        "propdesc": "To change the color of the annotation highlight, select the new color."
                    },
                    {
                        "propvalue": "Edit Highlight",
                        "propdesc": "Select this to change the highlight you've assigned to the text you've annotated. Then reapply the highlighting to the text in the document."
                    },
                    {
                        "propvalue": "Allow recipients to view your note",
                        "propdesc": "If this is a shared document, and you want the note to be visible to the other users you have shared it with, select this checkbox."
                    },
                    {
                        "propvalue": "Delete Annotation",
                        "propdesc": {
                            "image": {
                                "@alt": "Delete",
                                "@href": "trashcan.png",
                                "@placement": "inline",
                                "#tail": ") to delete the icon. Then confirm the action."
                            },
                            "#text": "Select the trash can icon ("
                        }
                    }
                ]
            }
        }
    }
