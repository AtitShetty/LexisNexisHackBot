{
    "reference": {
        "@otherprops": "qlangtips",
        "@audience": "res;urlapi",
        "@id": "qlangtips",
        "title": "qlang",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "LexisNexis"
            },
            "critdates": {
                "created": {
                    "@date": "2012-10-18"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance\u2122 URL API",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "note": {
                    "@conref": "urlapi_group_ref.xml#urlapi_group_ref/urlapinote"
                },
                "p": [
                    {
                        "uicontrol": {
                            "#tail": "parameter indicates whether your search query will be run as a boolean or natural language search. You can also use",
                            "#text": "qlang"
                        },
                        "userinput": {
                            "#tail": "to allow the Lexis Advance\u2122 application to determine which kind of query to use, based on effectiveness.",
                            "#text": "dyn"
                        },
                        "#text": "The"
                    },
                    "The qlang parameter is optional. It is shown below in a URL using search terms.",
                    {
                        "b": "URL Template"
                    },
                    {
                        "b": "{qlang}",
                        "#text": "http://advance.lexis.com/api/search?{search-terms}&"
                    }
                ],
                "example": {
                    "b": "qlang=bool",
                    "#text": "http://advance.lexis.com/api/search?q=car%20accident&"
                }
            },
            "properties": {
                "prophead": {
                    "propvaluehd": "Value",
                    "propdeschd": "Description"
                },
                "property": [
                    {
                        "propvalue": "search",
                        "propdesc": "Indicates the user wants to run a search and view the results."
                    },
                    {
                        "propvalue": "{search-terms}",
                        "propdesc": {
                            "p": {
                                "userinput": {
                                    "#tail": "in the URL to replace spaces between words in the search string.",
                                    "#text": "%20"
                                },
                                "#text": "Query parameter that contains the search syntax. Use"
                            },
                            "example": {
                                "b": {
                                    "#tail": "=car%20accident",
                                    "#text": "q"
                                }
                            }
                        }
                    },
                    {
                        "propvalue": "{qlang}",
                        "propdesc": {
                            "p": [
                                "Query parameter that specifies the query language (Optional).",
                                "Possible values:"
                            ],
                            "example": {
                                "b": {
                                    "#tail": "=bool",
                                    "#text": "qlang"
                                }
                            },
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "bool",
                                        "dd": "Boolean language"
                                    },
                                    {
                                        "dt": "nat",
                                        "dd": "natural language"
                                    },
                                    {
                                        "dt": "dyn",
                                        "dd": "dynamic (allows the application to determine the query language)"
                                    },
                                    {
                                        "dt": "dynamicand",
                                        "dd": "dynamic search with a reduced result set (equivalent to selecting \"fewer results\" on the search results page)"
                                    }
                                ]
                            }
                        }
                    }
                ]
            }
        }
    }
}