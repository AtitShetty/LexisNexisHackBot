{
    "reference": {
        "@otherprops": "managesharingtips",
        "@id": "managesharingtips",
        "title": "Manage Sharing",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2009-12-29"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "p": [
                    "Use the Manage Sharing page to set up and keep track of permissions for users who may view or edit documents in a shared folder.",
                    {
                        "uicontrol": {
                            "#tail": "to save your settings.",
                            "#text": "Save"
                        },
                        "#text": "When you're finished, select"
                    }
                ]
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Document Title",
                        "propdesc": "The name of the document to share."
                    },
                    {
                        "propvalue": "Save In",
                        "propdesc": "Select the name of the folder you want to save the document to."
                    },
                    {
                        "propvalue": "Share",
                        "propdesc": {
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": null,
                                        "dd": "Enter a user's first or last name or email address to find it in the list and add it to the list of users you want to share it with."
                                    },
                                    {
                                        "dt": "Shared With",
                                        "dd": "The names of the users you will be sharing the document with."
                                    },
                                    {
                                        "dt": "Editor",
                                        "dd": "Select this to allow the user to view items in the folder, and add or modify notes for the items."
                                    },
                                    {
                                        "dt": "Viewer",
                                        "dd": "Select this to allow the user only to view items in the folder."
                                    },
                                    {
                                        "dt": {
                                            "image": {
                                                "@alt": "Remove",
                                                "@href": "Closeremove.png",
                                                "@placement": "inline"
                                            }
                                        },
                                        "dd": "Select this to remove a user from the list."
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "@id": "foldernotes",
                        "propvalue": "Notes",
                        "propdesc": {
                            "uicontrol": {
                                "#tail": "checked. If you want the notes to be visible only to you, clear the checkbox.",
                                "#text": "Allow recipients to view your notes"
                            },
                            "#text": "Enter any notes you would like to store with the document.  The notes will be displayed in your folder list, under each of the documents you selected to save. If this is a shared document, and you want the notes to be visible to the other users you have shared it with, leave"
                        }
                    }
                ]
            }
        }
    }
}