{
    "reference": {
        "@otherprops": "alertlistips",
        "@id": "alertlistips",
        "title": "Alerts List Page",
        "prolog": {
            "author": [
                "Barb Bruns",
                "Christina Stommel (GDSI Release)"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2009-01-23"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "p": [
                    {
                        "uicontrol": [
                            {
                                "#tail": "from the",
                                "#text": "View all alerts"
                            },
                            {
                                "#tail": "pod on the",
                                "#text": "Alerts"
                            },
                            {
                                "#tail": "from the",
                                "#text": "Alerts"
                            },
                            {
                                "#tail": "drop-down list at the top of any page. When you do, a page is opened with a list of all of your saved alerts.",
                                "#text": "More"
                            }
                        ],
                        "ph": {
                            "@keyref": "prodnamefirst",
                            "#tail": "home page, or you can choose"
                        },
                        "#text": "You can view a list of all your alerts. To do this, you can either select"
                    },
                    "Use the list to manage your alerts, using the tasks listed below."
                ],
                "note": {
                    "@type": "note",
                    "ph": [
                        {
                            "@keyref": "vsanamefirst",
                            "#tail": "and you view your alerts, the list is limited to show only"
                        },
                        {
                            "@keyref": "vsaname",
                            "#tail": "-related alerts. You can clear this filter and view all of your available alerts (regardless of which experience you are working in) by clicking the X next to the filter name, above the"
                        }
                    ],
                    "uicontrol": {
                        "#tail": "pane.",
                        "#text": "Narrow By"
                    },
                    "#text": "When you first view the alerts list, it is filtered based on which experience you are working in when you view all alerts. For example, if you are working in"
                }
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Sort by",
                        "propdesc": {
                            "p": [
                                "By default, the alerts in the list are sorted in alphabetical order by alert title.",
                                "Select an option from this list to sort in a different order."
                            ]
                        }
                    },
                    {
                        "propvalue": "Actions toolbar",
                        "propdesc": {
                            "p": "Select the items you want to change and select any of the following buttons to perform that action on the item:",
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": {
                                            "image": {
                                                "@alt": "Start Alert",
                                                "@href": "alertplay.png",
                                                "#tail": ")"
                                            },
                                            "#text": "Start ("
                                        },
                                        "dd": "Click to restart any selected paused alerts or to start any new alerts you've created."
                                    },
                                    {
                                        "dt": {
                                            "image": {
                                                "@alt": "Pause Alert",
                                                "@href": "alertpause.png",
                                                "#tail": ")"
                                            },
                                            "#text": "Pause ("
                                        },
                                        "dd": "Click to temporarily stop the selected alerts from running."
                                    },
                                    {
                                        "dt": {
                                            "image": {
                                                "@alt": "Delete Alert",
                                                "@href": "closeremove.png",
                                                "#tail": ")"
                                            },
                                            "#text": "Delete alert ("
                                        },
                                        "dd": "Click to delete the selected alerts."
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "propvalue": "More drop-down list",
                        "propdesc": {
                            "p": "Select the items you want to change and choose any of the following options from the More drop-down list:",
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Mark results as read",
                                        "dd": "Click to mark all the results of the alert as having been read."
                                    },
                                    {
                                        "dt": "Delete alert results",
                                        "dd": "Click to delete all the results of the alert."
                                    },
                                    {
                                        "dt": "Printer-friendly view",
                                        "dd": "Click to view the list in a printer-friendly format."
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "propvalue": "Narrow By",
                        "propdesc": {
                            "p": [
                                {
                                    "uicontrol": {
                                        "#tail": "pane on the left side of your results.",
                                        "#text": "Narrow By"
                                    },
                                    "#text": "You can narrow your list of alerts by using any of the filters in the"
                                },
                                {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Select multiple"
                                    },
                                    "#text": "To select several criteria in any given category, select"
                                },
                                {
                                    "image": {
                                        "@alt": "Close level",
                                        "@href": "CloseRemove.png",
                                        "@placement": "inline",
                                        "#tail": ") next to your selections at the top of the"
                                    },
                                    "uicontrol": {
                                        "#tail": "pane to close that version.  When you have closed all the versions, your original results are displayed on the right side of the results view.",
                                        "#text": "Narrow By"
                                    },
                                    "#text": "To return to a previous results set after filtering one or more times, select the Remove icon ("
                                },
                                {
                                    "uicontrol": {
                                        "#tail": ".",
                                        "#text": "Clear All"
                                    },
                                    "#text": "You can also return to your original results by selecting"
                                }
                            ],
                            "note": {
                                "@type": "note",
                                "ph": {
                                    "@keyref": "shepalertplural",
                                    "#tail": "will have values for \"Monitor this Citation for\"."
                                },
                                "#text": "All of the alerts in the list will appear in more than one category. For example, all alerts will have values for \"type\", \"client\", \"notification\", and \"frequency\", and"
                            }
                        }
                    },
                    {
                        "propvalue": "Search Within Alerts",
                        "propdesc": {
                            "uicontrol": {
                                "#tail": "to find a specific alert.",
                                "#text": "Search"
                            },
                            "#text": "Enter the name of an alert, or search terms, client name, etc., and select"
                        }
                    },
                    {
                        "propvalue": "Individual Alerts",
                        "propdesc": {
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Alert title",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": "drop-down list.",
                                                "#text": "Sort by"
                                            },
                                            "note": {
                                                "@type": "note",
                                                "#text": "The number of unread results for each alert appears next to the alert title."
                                            },
                                            "#text": "The title you gave the alert. To sort your results alphabetically by title, choose the appropriate option from the"
                                        }
                                    },
                                    {
                                        "dt": "Terms",
                                        "dd": "Displays the terms you used in your search."
                                    },
                                    {
                                        "dt": "Filters",
                                        "dd": "Displays the different filters associated with the alert."
                                    },
                                    {
                                        "dt": "Period",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": "drop-down list.",
                                                "#text": "Sort by"
                                            },
                                            "#text": "Shows the date this alert began running and the date this alert will stop running. To sort your results by start or end date, choose the appropriate option from the"
                                        }
                                    },
                                    {
                                        "dt": "Originated In",
                                        "dd": {
                                            "ph": {
                                                "@keyref": "prodname",
                                                "#tail": "application you were viewing when you selected to view alerts. To view all available alerts, clear the filter by selecting the X next to the experience name in the"
                                            },
                                            "uicontrol": {
                                                "#tail": "pane.",
                                                "#text": "Narrow By"
                                            },
                                            "#text": "Shows the"
                                        }
                                    },
                                    {
                                        "dt": "Type",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": "drop-down list.",
                                                "#text": "Sort by"
                                            },
                                            "#text": "The alert type. To sort your results by type, choose the appropriate option from the"
                                        }
                                    },
                                    {
                                        "dt": "Client",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": "drop-down list.",
                                                "#text": "Sort by"
                                            },
                                            "#text": "The client assigned when this alert was saved. To sort your results by client, choose the appropriate option from the"
                                        }
                                    },
                                    {
                                        "dt": "Monitor changes for (available for legislative alerts)",
                                        "dd": "Watches for any legislation that will amend, repeal, or change the statute section shown (the section you searched for)."
                                    },
                                    {
                                        "dt": "Frequency",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": "drop-down list.",
                                                "#text": "Sort by"
                                            },
                                            "#text": "How often this alert runs. To sort your results by frequency, choose the appropriate option from the"
                                        }
                                    },
                                    {
                                        "dt": "Delivery Type",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": "drop-down list.",
                                                "#text": "Sort by"
                                            },
                                            "#text": "Indicates whether the results of this alert are delivered online or by email. To sort your results by delivery type, choose the appropriate option from the"
                                        }
                                    },
                                    {
                                        "dt": {
                                            "image": {
                                                "@alt": "Edit Alert",
                                                "@href": "Edit.png",
                                                "#tail": ")"
                                            },
                                            "#text": "Edit ("
                                        },
                                        "dd": "Click this button to edit the properties of your alert."
                                    }
                                ]
                            },
                            "#text": "The following information is available about each individual alert:"
                        }
                    }
                ]
            }
        }
    }
}