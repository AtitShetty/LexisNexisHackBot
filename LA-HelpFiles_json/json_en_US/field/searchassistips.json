{
    "reference": {
        "@otherprops": "searchassistips;search;searchtips",
        "@audience": "exclude",
        "@id": "searchassistips",
        "title": "Advanced Search Form",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2007-07-05"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "p": [
                    "Use the Advanced Search form to construct your search to include or exclude certain words or phrases. You can use this form to construct your initial search, or to add to it.",
                    {
                        "uicontrol": {
                            "#tail": ", your search is displayed for you to review, with the terms you entered linked by connectors.",
                            "#text": "Add to Search"
                        },
                        "#text": "When you select a search option and enter terms in the fields that are displayed, then select"
                    },
                    {
                        "uicontrol": {
                            "#tail": "or",
                            "#text": "Connectors"
                        },
                        "b": {
                            "ph": {
                                "@keyref": "shepardsfirst"
                            },
                            "#tail": "sections on the form to add connectors to your search terms or enter a citation you want to"
                        },
                        "ph": {
                            "@keyref": "shepardize",
                            "#tail": "\u00ae."
                        },
                        "#text": "Use the"
                    }
                ]
            },
            "properties": {
                "prophead": {
                    "propvaluehd": "Label",
                    "propdeschd": "Explanation"
                },
                "property": [
                    {
                        "propvalue": {
                            "p": {
                                "#tail": "Find documents that:",
                                "#text": "Search Terms"
                            }
                        },
                        "propdesc": {
                            "p": {
                                "uicontrol": {
                                    "#tail": "to add them to your search.",
                                    "#text": "Add to search"
                                },
                                "#text": "Click the drop-down list to select a search option from the list.  When you have made the selections you want, select"
                            },
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "include all these words",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".  The terms will be displayed separated by the",
                                                "#text": "Add to Search"
                                            },
                                            "userinput": {
                                                "#tail": "connector.  A document must contain all the search terms in your search to be included in your search results. Use this option to find words that are far apart from one another or in different sections of a document.",
                                                "#text": "and"
                                            },
                                            "#text": "Enter your search terms and select"
                                        }
                                    },
                                    {
                                        "dt": "include this exact word or phrase",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".  The terms will be displayed with quotation marks before the first word you enter and after the last word you enter.  A document must contain your original search terms (if any) and the exact word or phrase you enter, to be included in your search results.",
                                                "#text": "Add to Search"
                                            },
                                            "#text": "Enter your search terms and select"
                                        }
                                    },
                                    {
                                        "dt": "include one or more of these words",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".  The terms will be displayed preceded by the",
                                                "#text": "Add to Search"
                                            },
                                            "userinput": [
                                                {
                                                    "#tail": "connector, and separated from each other by the",
                                                    "#text": "and"
                                                },
                                                {
                                                    "#tail": "connector.  A document must contain your original search terms (if any) and one or more of the words you enter, to be included in your search results.",
                                                    "#text": "or"
                                                }
                                            ],
                                            "#text": "Enter your search terms and select"
                                        }
                                    },
                                    {
                                        "dt": "exclude these words",
                                        "dd": {
                                            "uicontrol": {
                                                "#tail": ".  The terms you want to exclude will be displayed preceded by a minus sign (-).  A document must contain your original search terms (if any) but must not contain any of the words you enter, to be included in your search results. Use this option to exclude documents from your search results that contain the terms you enter.",
                                                "#text": "Add to Search"
                                            },
                                            "#text": "Enter your search terms and select"
                                        }
                                    },
                                    {
                                        "dt": "include these words near each other",
                                        "dd": {
                                            "uicontrol": [
                                                {
                                                    "#tail": "list (the values are defined in the list below), and select",
                                                    "#text": "within"
                                                },
                                                {
                                                    "#tail": ".  The terms will be displayed preceded by the",
                                                    "#text": "Add to Search"
                                                },
                                                {
                                                    "#tail": "list.  A document must contain your original search terms (if any) and the words you enter, in the proximity to each other that you select, to be included in your search results.",
                                                    "#text": "within"
                                                }
                                            ],
                                            "userinput": [
                                                {
                                                    "#tail": "connector, and separated from each other by",
                                                    "#text": "and"
                                                },
                                                {
                                                    "#tail": "with",
                                                    "#text": "near/n"
                                                }
                                            ],
                                            "i": {
                                                "#tail": "being the value you choose from the",
                                                "#text": "n"
                                            },
                                            "#text": "Enter your search terms, select how close together you want the words to appear in the document from the"
                                        }
                                    }
                                ],
                                "dl": {
                                    "dlentry": [
                                        {
                                            "dt": "1 word",
                                            "dd": "search terms appear next to each other"
                                        },
                                        {
                                            "dt": "2 words",
                                            "dd": "search terms appear in approximately the same phrase"
                                        },
                                        {
                                            "dt": "3 words",
                                            "dd": "search terms appear in approximately the same phrase"
                                        },
                                        {
                                            "dt": "4 words",
                                            "dd": "search terms appear in approximately the same phrase"
                                        },
                                        {
                                            "dt": "5 words",
                                            "dd": "search terms appear in approximately the same phrase"
                                        },
                                        {
                                            "dt": "10 words",
                                            "dd": "search terms appear in approximately the same sentence"
                                        },
                                        {
                                            "dt": "15 words",
                                            "dd": "search terms appear in approximately the same sentence"
                                        },
                                        {
                                            "dt": "25 words",
                                            "dd": "search terms appear in approximately the same paragraph"
                                        },
                                        {
                                            "dt": "50 words",
                                            "dd": "search terms appear in approximately the same paragraph"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    {
                        "propvalue": "Connectors",
                        "propdesc": {
                            "p": {
                                "uicontrol": {
                                    "#tail": "to add the connector to your search.",
                                    "#text": "Add to search"
                                },
                                "#text": "Select a connector from the list and select"
                            }
                        }
                    },
                    {
                        "propvalue": {
                            "ph": {
                                "@keyref": "shepname"
                            }
                        },
                        "propdesc": {
                            "p": {
                                "uicontrol": {
                                    "#tail": "and then enter a citation to",
                                    "#text": "Add to search"
                                },
                                "ph": {
                                    "@keyref": "shepardize",
                                    "#tail": "\u00ae the citation."
                                },
                                "#text": "Select"
                            },
                            "note": "Selecting this will replace any search terms you have already entered."
                        }
                    },
                    {
                        "propvalue": "Search",
                        "propdesc": {
                            "uicontrol": {
                                "#tail": "to complete your search.",
                                "#text": "Search"
                            },
                            "#text": "Select"
                        }
                    }
                ]
            }
        }
    }
}