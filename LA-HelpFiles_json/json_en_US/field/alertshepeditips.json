        "title": {
            "ph": {
                "@keyref": "shepalert",
                "#tail": "Page"
            },
            "#text": "Edit"
        },
        "prolog": {
            "author": [
                "Barb Bruns",
                "Christina Stommel (GDSI Release)"
            ],
            "copyright": {
                "copyryear": {
                    "@year": "2007"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2009-12-29"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "p": {
                    "ph": {
                        "@keyref": "shepalert",
                        "#tail": ".  You can change your selections for these options:"
                    },
                    "#text": "Use this form to edit an existing"
                },
                "ul": {
                    "li": [
                        "Title",
                        "Client",
                        "Changes the alert is monitoring for",
                        "How often you are notified of any results",
                        "Duration of the alert",
                        "Notification options",
                        "Lists of people with whom you've shared the alert"
                    ]
                }
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Overview tab",
                        "propdesc": {
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Title",
                                        "dd": {
                                            "ph": {
                                                "@keyref": "shepards",
                                                "#tail": "report), or give it a name that you will use later to retrieve it."
                                            },
                                            "#text": "Keep the alert name that is displayed (this is the \"topline\" name from the"
                                        }
                                    },
                                    {
                                        "dt": "Client",
                                        "dd": {
                                            "uicontrol": [
                                                {
                                                    "#tail": "and choose a client you've recently used from the drop-down list, or select",
                                                    "#text": "Recent client"
                                                },
                                                {
                                                    "#tail": "to enter the name of a new client.",
                                                    "#text": "New client"
                                                }
                                            ],
                                            "#text": "Either select"
                                        }
                                    }
                                ]
                            },
                            "#text": "Provide the following information:"
                        }
                    },
                    {
                        "propvalue": "Monitor tab",
                        "propdesc": {
                            "dl": {
                                "dlentry": {
                                    "dt": "Monitor for",
                                    "dd": {
                                        "ul": {
                                            "li": [
                                                "Any change - Select this to be alerted to any change, positive or negative.",
                                                "New negative analysis - Select this to be alerted only to new negative analysis.",
                                                "Custom settings - Choose from the custom settings to select the specific treatments and headnotes for which you want to be alerted. The settings that are available to select from depend on the type of Shepard's report (caselaw or statute) the alert is based on."
                                            ]
                                        },
                                        "#text": "Select the type of change you want to be alerted for."
                                    }
                                }
                            },
                            "#text": "Provide the following information:"
                        }
                    },
                    {
                        "propvalue": "Deliver tab",
                        "propdesc": {
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Duration",
                                        "dd": {
                                            "uicontrol": [
                                                {
                                                    "#tail": "and",
                                                    "#text": "Start"
                                                },
                                                {
                                                    "#tail": "boxes (or select from the calendars) to indicate how long you want this alert to run.",
                                                    "#text": "End"
                                                }
                                            ],
                                            "#text": "Enter dates in the"
                                        }
                                    },
                                    {
                                        "dt": "Delivery Type",
                                        "dd": {
                                            "uicontrol": [
                                                {
                                                    "#tail": "and in the",
                                                    "#text": "Email address"
                                                },
                                                {
                                                    "#tail": "group, choose whether you want the email to be delivered in HTML or text format.",
                                                    "#text": "Delivery format"
                                                }
                                            ],
                                            "#text": "You can choose online delivery only or email plus online delivery.  If you select email, enter your"
                                        }
                                    },
                                    {
                                        "dt": "Frequency",
                                        "dd": {
                                            "p": "Select how often you want to be notified of any results.",
                                            "note": "Between notifications, you can go online at any time to view your results.",
                                            "ul": {
                                                "li": [
                                                    "Daily - Each day of the week",
                                                    "Business Daily - Each day from Monday through Friday.",
                                                    "Weekly - Once a week, on the day you select.",
                                                    {
                                                        "uicontrol": {
                                                            "#tail": ", you will be notified on March 1, because there is no 30th day in February.",
                                                            "#text": "30"
                                                        },
                                                        "#text": "Monthly - Once a month, on the date you select. If the date doesn't occur in a certain month, you will receive notification of any results on the first day of the following month.  For example, if you select"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                ]
                            },
                            "#text": "Provide the following information:"
                        }
                    },
                    {
                        "propvalue": "Share tab",
                        "propdesc": {
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Enter a user's name (using the format of last name, first name), or enter the user's email address.",
                                        "dd": "To share the alert with other users in your organization, type the user's first name or last name. The alert will be shared immediately with him or her. To share the alert with users who are not part of your organization, type the user's email address. Outside recipients will need to accept the invitation to view the alert."
                                    },
                                    {
                                        "dt": "Added contacts / Shared with",
                                        "dd": "Shows the list of people with whom you are sharing the alert."
                                    }
                                ]
                            },
                            "#text": "Provide the following information:"
                        }
                    },
                    {
                        "propvalue": "Save",
                        "propdesc": "Click to save the alert."
                    },
                    {
                        "propvalue": "Cancel",
                        "propdesc": "Click to return to the previous page without saving any changes."
                    }
                ]
            }
        }
    }
}