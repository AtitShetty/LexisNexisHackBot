{
    "reference": {
        "@otherprops": "topicsummaryreportips",
        "@audience": "res;lps",
        "@id": "topicsummaryreportips",
        "title": "Topic Summary Report",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2011"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2012-06-06"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "refbody": {
            "section": {
                "p": "A topic summary contains some or all of these items, as applicable to the legal topic:"
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Topic index",
                        "propdesc": "Select this to see the topic's placement in the legal topic hierarchy."
                    },
                    {
                        "propvalue": "Get all documents for this topic",
                        "propdesc": "Select this to see a results list of all the documents that address this topic."
                    },
                    {
                        "@id": "jumpto",
                        "propvalue": "Jump to...",
                        "propdesc": {
                            "p": [
                                "Click the down arrow to display specific parts of the document that you can navigate to quickly. Sections of the document may include the following (not all sections will appear in every document):",
                                {
                                    "b": "Sections"
                                }
                            ],
                            "dl": {
                                "dlentry": [
                                    {
                                        "dt": "Top of document",
                                        "dd": "Select this to go to the top of the document."
                                    },
                                    {
                                        "dt": "Definition",
                                        "dd": "A definition and summary of the legal topic."
                                    },
                                    {
                                        "dt": "Seminal Cases",
                                        "dd": "A list of seminal cases for the legal topic, with a link to the full text of the case."
                                    },
                                    {
                                        "dt": "Seminal Statutes",
                                        "dd": "A list of seminal statutes for the legal topic."
                                    },
                                    {
                                        "dt": "Elements of",
                                        "dd": "Significant factors of the case."
                                    },
                                    {
                                        "dt": "Secondary Sources",
                                        "dd": "Reference material on the topic, such as treatises."
                                    },
                                    {
                                        "dt": "Burden of Proof",
                                        "dd": "Indicates which party bears the burden of proof."
                                    },
                                    {
                                        "dt": "Standards of Review",
                                        "dd": "Standards by which the sufficiency of the evidence is determined."
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "propvalue": "Other Jurisdictions",
                        "propdesc": "The topic summary information (definition, seminal cases, etc.) for other jurisdictions."
                    }
                ]
            }
        }
    }
}