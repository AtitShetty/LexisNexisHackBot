        "refbody": {
            "section": {
                "p": "Use this form to save a Research Map to one of your folders."
            },
            "properties": {
                "property": [
                    {
                        "propvalue": "Share With Others",
                        "propdesc": "Select this tab to share this map with others."
                    },
                    {
                        "propvalue": "Document Title",
                        "propdesc": "Use the title that is displayed, or give the map a name that you will use later to retrieve it."
                    },
                    {
                        "propvalue": "PDF/Live Map",
                        "propdesc": {
                            "uicontrol": [
                                {
                                    "#tail": ". Saving it as a",
                                    "#text": "Live Map"
                                },
                                {
                                    "#tail": "allows you to return to the same history map from your folder.",
                                    "#text": "Live Map"
                                }
                            ],
                            "#text": "Select whether to save the map as a PDF or as a"
                        }
                    },
                    {
                        "propvalue": "Save In",
                        "propdesc": {
                            "uicontrol": {
                                "#tail": "to create a new one.",
                                "#text": "Create New Folder"
                            },
                            "#text": "Select a folder to save the map to, or select"
                        }
                    },
                    {
                        "propvalue": "Notes",
                        "propdesc": "Enter any notes you would like to store with the Research Map."
                    }
                ]
            }
        }
    }
