{
    "concept": {
        "@otherprops": "history",
        "@id": "history_cpt",
        "title": "What is the history feature?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2009-01-21"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "conbody": {
            "p": [
                {
                    "ph": [
                        {
                            "@keyref": "prodnamefirst",
                            "#tail": "history feature.  Your searches, search terms, documents, deliveries, and other activities are automatically saved in the history for up to 90 days. You can display your research history in a list view or a graphic (\"map\") view. You can access history by selecting"
                        },
                        {
                            "@keyref": "prodname",
                            "#tail": "home page, select the"
                        }
                    ],
                    "uicontrol": [
                        {
                            "#tail": "at the top of any page, and then selecting a specific search or other item from the list, or",
                            "#text": "History"
                        },
                        {
                            "#tail": "or",
                            "#text": "View all history"
                        },
                        {
                            "#tail": ". Or, on the",
                            "#text": "Research Map"
                        },
                        {
                            "#tail": "pod, then select a specific item, or select",
                            "#text": "History"
                        },
                        {
                            "#tail": "or",
                            "#text": "View all history"
                        },
                        {
                            "#tail": "at the bottom.",
                            "#text": "Research Map"
                        }
                    ],
                    "#text": "You can quickly resume your work from past research sessions using the"
                },
                {
                    "uicontrol": [
                        {
                            "#tail": "pod on the home page.  Select a search to display the results for it, or select",
                            "#text": "History"
                        },
                        {
                            "#tail": "to display your searches from the last 90 days.",
                            "#text": "View all history"
                        }
                    ],
                    "#text": "Your last 5 searches are listed on the"
                },
                {
                    "xref": {
                        "@scope": "peer",
                        "@href": "gh_homeworkfolders.xml",
                        "#tail": "for details."
                    },
                    "#text": "To save any of these activities for an unlimited time, create a folder in which to store them. See"
                }
            ],
            "note": {
                "@type": "note",
                "#text": "For Public Records, you can only find items in history for up to 10 days."
            }
        }
    }
}