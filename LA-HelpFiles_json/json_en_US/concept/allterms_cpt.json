    "concept": {
        "@id": "allterms_cpt",
        "title": "What's the difference between \"Expanded Results\" and \"Fewer Results\"?",
        "prolog": {
            "author": "Barb Bruns",
            "copyright": {
                "copyryear": {
                    "@year": "2009"
                },
                "copyrholder": "Lexisnexis"
            },
            "critdates": {
                "created": {
                    "@date": "2009-01-21"
                }
            },
            "metadata": {
                "prodinfo": {
                    "prodname": "Lexis Advance",
                    "vrmlist": {
                        "vrm": {
                            "@version": "1"
                        }
                    }
                }
            }
        },
        "conbody": {
            "p": [
                {
                    "ph": {
                        "@keyref": "prodnamefirst",
                        "#tail": ", the"
                    },
                    "uicontrol": [
                        {
                            "#tail": "menu at the top of your results will have an option that says either",
                            "#text": "Actions"
                        },
                        {
                            "#tail": "or",
                            "#text": "Expanded results"
                        },
                        {
                            "#tail": ".  The option that is displayed depends on what your results list contains.",
                            "#text": "Fewer results"
                        }
                    ],
                    "#text": "When you run a natural language search on"
                },
                {
                    "uicontrol": [
                        {
                            "#tail": ", your results list will expand to include all the documents containing any of your search terms.  If you select",
                            "#text": "Expanded results"
                        },
                        {
                            "#tail": ", your results list will change to retrieve only the top results.",
                            "#text": "Fewer results"
                        }
                    ],
                    "#text": "When you select the option, the number of documents in your results list will change. If you select"
                },
                {
                    "uicontrol": [
                        {
                            "ph": {
                                "@keyref": "prodnamefirst",
                                "#tail": "Research"
                            },
                            "#tail": "under",
                            "#text": "Settings >"
                        },
                        {
                            "#tail": ".",
                            "#text": "Preferred Results Set Display"
                        }
                    ],
                    "#text": "You can control which kind of results list is displayed first every time you search, in"
                },
                {
                    "uicontrol": [
                        {
                            "#tail": "from the",
                            "#text": "Run search as terms & connectors"
                        },
                        {
                            "#tail": "menu at the top of your results, the",
                            "#text": "Actions"
                        },
                        {
                            "#tail": "and",
                            "#text": "Expanded results"
                        },
                        {
                            "#tail": "options are not available.",
                            "#text": "Fewer results"
                        }
                    ],
                    "#text": "Terms and connectors searches are not affected by this option.  If you run a search using terms and connectors, or select"
                }
            ]
        }
    }
}